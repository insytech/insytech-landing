---
import Layout from "@layouts/VisionLayout.astro";
import Hero from "@components/tracking/Hero.astro";
import Container from "@components/shared/Container.astro";
import ContactForm from "@components/sections/ContactForm.astro";
---

<Layout
    title="Insytech MES: Trazabilidad y Monitoreo de Producción"
    description="Sistemas de trazabilidad, monitoreo en tiempo real y análisis de producción para manufactura. Control total de tu operación."
    siteName="Insytech MES"
>
    <main class="flex flex-col overflow-hidden">
        <Hero />

        <!-- Coming Soon Section -->
        <section class="py-20 bg-gray-50 dark:bg-gray-900">
            <Container>
                <div class="text-center max-w-2xl mx-auto">
                    <h2
                        class="text-3xl font-semibold font-['FieldworkGeo'] text-[#211915] dark:text-white mb-4"
                    >
                        Contenido en desarrollo
                    </h2>
                    <p class="text-gray-600 dark:text-gray-400 mb-8">
                        Estamos preparando información detallada sobre nuestras
                        soluciones de trazabilidad y monitoreo de producción.
                        Mientras tanto, contáctanos para conocer cómo podemos
                        ayudarte.
                    </p>
                </div>
            </Container>
        </section>

        <!-- Contact Section -->
        <div class="relative" id="contact">
            <div class="absolute inset-0 z-0">
                <div class="absolute inset-0 bg-gray-100 dark:bg-gray-900/20">
                </div>
            </div>
            <div class="relative z-10 py-10">
                <ContactForm />
            </div>
        </div>
    </main>
</Layout>
