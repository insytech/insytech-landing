---
import Layout from "@layouts/VisionLayout.astro";
import Hero from "@components/control/Hero.astro";
import Services from "@components/control/Services.astro";
import Stats from "@components/control/Stats.astro";
import Performance from "@components/control/Performance.astro";
import Projects from "@components/control/Projects.astro";
import Testimonials from "@components/control/Testimonials.astro";
import CTA from "@components/control/CTA.astro";
import ContactForm from "@components/sections/ContactForm.astro";
---

<Layout
    title="Insytech Control: Automatización y Control Industrial"
    description="Soluciones de PLC, SCADA, IoT industrial y automatización de procesos para manufactura inteligente. Integración con sistemas existentes."
    siteName="Insytech Control"
>
    <main class="flex flex-col overflow-hidden">
        <Hero />
        <Services />
        <Stats />
        <Performance />
        <Projects />
        <Testimonials />
        <CTA />

        <!-- Contact Section -->
        <div class="relative" id="contact">
            <div class="absolute inset-0 z-0">
                <div class="absolute inset-0 bg-gray-100 dark:bg-gray-900/20">
                </div>
            </div>
            <div class="relative z-10 py-10">
                <ContactForm />
            </div>
        </div>
    </main>
</Layout>
