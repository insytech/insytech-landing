---
import ChatbotsLayout from "../../layouts/AutomatizacionLayout.astro";
import Hero from "../../components/automatizacion/Hero.astro";
import About from "../../components/automatizacion/About.astro";
import Services from "../../components/automatizacion/Services.astro";
import Cta from "../../components/automatizacion/Cta.astro";
import ContactForm from "@components/sections/ContactForm.astro";
---

<ChatbotsLayout>
    <Hero />
    <About />
    <Services />
    <Cta />
    <div class="relative">
        <div class="absolute inset-0 z-0">
            <!-- Curved path 1 - Different from Hero -->
            <svg
                class="absolute inset-0 w-full h-full"
                viewBox="0 0 1440 800"
                preserveAspectRatio="xMidYMid slice"
            >
                <path
                    d="M0,200 Q480,100 960,300 T1440,250"
                    stroke="url(#serviceBeam1)"
                    stroke-width="2"
                    fill="none"
                    opacity="0.4"
                >
                    <animate
                        attributeName="opacity"
                        values="0.3;0.7;0.3"
                        dur="10s"
                        repeatCount="indefinite"></animate>
                </path>

                <!-- Curved path 2 - Different positioning -->
                <path
                    d="M1440,600 Q1080,500 720,650 T0,600"
                    stroke="url(#serviceBeam2)"
                    stroke-width="3"
                    fill="none"
                    opacity="0.5"
                >
                    <animate
                        attributeName="stroke-width"
                        values="2;4;2"
                        dur="14s"
                        repeatCount="indefinite"></animate>
                </path>

                <!-- Curved path 3 - Unique wave pattern -->
                <path
                    d="M0,450 Q360,350 720,500 Q1080,650 1440,550"
                    stroke="url(#serviceBeam1)"
                    stroke-width="2"
                    fill="none"
                    opacity="0.6"
                >
                    <animate
                        attributeName="stroke-width"
                        values="1;3;1"
                        dur="16s"
                        repeatCount="indefinite"></animate>
                </path>

                <!-- Additional curved path for more depth -->
            </svg>
        </div>
        <div class="relative z-10 py-20">
            <ContactForm />
        </div>
    </div>
</ChatbotsLayout>
