---
import Container from "../shared/Container.astro";
---

<section
    id="hmi"
    class="py-20 lg:py-32 bg-gray-50 dark:bg-gray-900 overflow-hidden"
>
    <Container className="relative">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
            <!-- Visual: HMI Operator Panel Mockup (Left Side) -->
            <div
                class="relative order-2 lg:order-1 perspective-1000"
                data-animate="slide-right"
            >
                <div
                    class="relative bg-gray-900 border-[8px] border-gray-800 rounded-xl shadow-2xl overflow-hidden transform rotate-y-6 hover:rotate-y-0 transition-transform duration-700 p-1"
                >
                    <!-- Status Bar -->
                    <div
                        class="bg-gray-800 px-4 py-2 flex items-center justify-between border-b border-gray-700"
                    >
                        <div class="flex items-center gap-4">
                            <div class="flex flex-col">
                                <span
                                    class="text-[10px] text-gray-400 uppercase tracking-wider font-bold"
                                    >Orden de Producción</span
                                >
                                <span class="text-white font-mono text-sm"
                                    >OP-2024-885</span
                                >
                            </div>
                            <div class="h-6 w-px bg-gray-600"></div>
                            <div class="flex flex-col">
                                <span
                                    class="text-[10px] text-gray-400 uppercase tracking-wider font-bold"
                                    >Estación</span
                                >
                                <span class="text-white font-mono text-sm"
                                    >ENS-04</span
                                >
                            </div>
                        </div>
                        <div class="flex items-center gap-3">
                            <div
                                class="bg-green-500/20 text-green-400 px-2 py-0.5 rounded text-xs font-bold border border-green-500/30 animate-pulse"
                            >
                                RUNNING
                            </div>
                            <div class="text-gray-400 text-xs">10:42 AM</div>
                        </div>
                    </div>

                    <!-- Main HMI Content -->
                    <div
                        class="bg-gray-100 dark:bg-gray-900/50 p-4 h-64 flex gap-4"
                    >
                        <!-- Left: Steps -->
                        <div class="w-1/3 space-y-2">
                            <div
                                class="bg-blue-600 text-white p-3 rounded-lg shadow-lg transform scale-105 border-l-4 border-white"
                            >
                                <div
                                    class="text-[10px] opacity-80 uppercase font-bold text-blue-100"
                                >
                                    Paso 3/12
                                </div>
                                <div class="text-sm font-bold">
                                    Instalar Sensor A
                                </div>
                            </div>
                            <div
                                class="bg-white dark:bg-gray-800 p-3 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 opacity-60"
                            >
                                <div
                                    class="text-[10px] text-gray-400 uppercase font-bold"
                                >
                                    Paso 4
                                </div>
                                <div
                                    class="text-sm text-gray-600 dark:text-gray-400 font-medium"
                                >
                                    Conectar Cableado
                                </div>
                            </div>
                            <div
                                class="bg-white dark:bg-gray-800 p-3 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 opacity-40"
                            >
                                <div
                                    class="text-[10px] text-gray-400 uppercase font-bold"
                                >
                                    Paso 5
                                </div>
                                <div
                                    class="text-sm text-gray-600 dark:text-gray-400 font-medium"
                                >
                                    Verificar Tensión
                                </div>
                            </div>
                        </div>

                        <!-- Right: Visual Instruction -->
                        <div
                            class="flex-1 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-2 relative flex flex-col"
                        >
                            <div
                                class="flex-1 bg-gray-50 dark:bg-gray-900/50 rounded flex items-center justify-center relative overflow-hidden group"
                            >
                                <!-- Grid pattern bg -->
                                <div
                                    class="absolute inset-0"
                                    style="background-image: radial-gradient(#cbd5e1 1px, transparent 1px); background-size: 20px 20px; opacity: 0.2"
                                >
                                </div>

                                <div
                                    class="w-24 h-24 border-2 border-dashed border-blue-400 rounded-full flex items-center justify-center relative"
                                >
                                    <div
                                        class="absolute -top-2 -right-2 w-6 h-6 bg-blue-500 rounded-full text-white text-xs flex items-center justify-center font-bold shadow-lg"
                                    >
                                        1
                                    </div>
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="h-12 w-12 text-gray-400 dark:text-gray-500 group-hover:text-blue-500 transition-colors duration-300"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M13 10V3L4 14h7v7l9-11h-7z"
                                        ></path>
                                    </svg>
                                </div>
                            </div>
                            <div class="mt-2 flex gap-2">
                                <button
                                    class="flex-1 bg-red-100 hover:bg-red-200 text-red-600 dark:bg-red-900/20 dark:hover:bg-red-900/30 dark:text-red-400 text-xs py-2 rounded font-bold transition-colors"
                                    >NO OK</button
                                >
                                <button
                                    class="flex-1 bg-green-500 hover:bg-green-600 text-white text-xs py-2 rounded font-bold shadow-lg shadow-green-500/20 transition-all"
                                    >CONFIRMAR</button
                                >
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Floating Stats Card -->
                <div
                    class="absolute -right-6 top-10 bg-white dark:bg-gray-800 rounded-xl shadow-xl p-4 border border-gray-200 dark:border-gray-700 w-40 z-10"
                >
                    <div
                        class="text-xs text-gray-600 dark:text-gray-400 uppercase tracking-wide font-bold mb-2"
                    >
                        Eficiencia
                    </div>
                    <div class="flex items-end gap-2">
                        <span
                            class="text-3xl font-bold text-gray-900 dark:text-white"
                            >94%</span
                        >
                        <span class="text-xs text-green-500 font-bold mb-1"
                            >▲ 2%</span
                        >
                    </div>
                    <div
                        class="w-full bg-gray-200 dark:bg-gray-700 h-1.5 rounded-full mt-2 overflow-hidden"
                    >
                        <div
                            class="bg-green-500 h-full rounded-full"
                            style="width: 94%"
                        >
                        </div>
                    </div>
                </div>

                <!-- Glow Effect -->
                <div
                    class="absolute -z-10 bottom-0 left-1/2 transform -translate-x-1/2 w-[90%] h-32 bg-green-500/15 dark:bg-green-500/10 rounded-full blur-3xl"
                >
                </div>
            </div>

            <!-- Text Content (Right Side) -->
            <div class="order-1 lg:order-2" data-animate="slide-left">
                <div
                    class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-green-100 dark:bg-green-500/10 text-green-700 dark:text-green-400 text-sm font-semibold mb-6 border border-green-200 dark:border-green-500/20"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-4 w-4"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                        ></path>
                    </svg>
                    MES HMI
                </div>

                <h2
                    class="text-3xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-6 leading-tight"
                >
                    Control total en el <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-green-600 to-emerald-500 dark:from-green-400 dark:to-emerald-400"
                        >piso de producción</span
                    >
                </h2>

                <p
                    class="text-lg text-gray-600 dark:text-gray-400 mb-8 leading-relaxed"
                >
                    Empodera a tus operadores con interfaces táctiles diseñadas
                    para la industria. Instrucciones claras, alertas visuales y
                    registro de calidad en tiempo real.
                </p>

                <div class="space-y-6 mb-10">
                    <div class="flex gap-4">
                        <div
                            class="w-12 h-12 rounded-xl bg-gray-100 dark:bg-gray-800 flex items-center justify-center shrink-0"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-6 w-6 text-indigo-600 dark:text-indigo-400"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <h4
                                class="text-lg font-bold text-gray-900 dark:text-white mb-1"
                            >
                                Paperless Factory
                            </h4>
                            <p class="text-gray-600 dark:text-gray-400">
                                Digitaliza instrucciones, planos y checklists.
                                Elimina el papel y asegura que siempre se use la
                                versión vigente.
                            </p>
                        </div>
                    </div>

                    <div class="flex gap-4">
                        <div
                            class="w-12 h-12 rounded-xl bg-gray-100 dark:bg-gray-800 flex items-center justify-center shrink-0"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-6 w-6 text-red-500 dark:text-red-400"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <h4
                                class="text-lg font-bold text-gray-900 dark:text-white mb-1"
                            >
                                Andon Digital
                            </h4>
                            <p class="text-gray-600 dark:text-gray-400">
                                Reporte de incidencias y paros de línea con un
                                solo toque. Notifica a mantenimiento y calidad
                                al instante.
                            </p>
                        </div>
                    </div>
                </div>

                <a
                    href="#demo"
                    class="text-green-600 dark:text-green-400 font-semibold hover:text-green-700 dark:hover:text-green-300 inline-flex items-center gap-2 group"
                >
                    Ver demo interactivo
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-4 w-4 transform group-hover:translate-x-1 transition-transform"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                </a>
            </div>
        </div>
    </Container>
</section>
