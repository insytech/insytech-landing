---
import Container from "../shared/Container.astro";
---

<section
    class="relative min-h-screen flex items-center overflow-hidden bg-white dark:bg-gray-950 pb-20"
>
    <!-- Background Patterns -->
    <div class="absolute inset-0 z-0">
        <!-- Dot Pattern -->
        <div
            class="absolute inset-0 bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] dark:bg-[radial-gradient(#1f2937_1px,transparent_1px)] [background-size:20px_20px] opacity-70"
        >
        </div>

        <!-- Gradient Mesh / Spotlight -->
        <div class="absolute inset-0 overflow-hidden">
            <div
                class="absolute -top-[40%] -left-[20%] w-[70%] h-[70%] rounded-full bg-gradient-to-br from-blue-400/20 to-cyan-300/20 blur-[100px] animate-blob"
            >
            </div>
            <div
                class="absolute top-[20%] -right-[20%] w-[60%] h-[60%] rounded-full bg-gradient-to-br from-indigo-400/20 to-blue-300/20 blur-[100px] animate-blob animation-delay-2000"
            >
            </div>
            <div
                class="absolute -bottom-[40%] left-[20%] w-[60%] h-[60%] rounded-full bg-gradient-to-br from-sky-400/20 to-indigo-300/20 blur-[100px] animate-blob animation-delay-4000"
            >
            </div>
        </div>

        <!-- Subtle noise texture for realism -->
        <div
            class="absolute inset-0 opacity-[0.03] dark:opacity-[0.05]"
            style="background-image: url('/images/noise.png');"
        >
        </div>
    </div>

    <Container className="relative z-10">
        <div class="flex flex-col items-center text-center pt-24 lg:pt-28 pb-8">
            <!-- Badge -->
            <div
                class="inline-flex items-center gap-3 px-4 py-2 rounded-full bg-blue-500/10 dark:bg-cyan-500/10 border border-blue-500/20 dark:border-cyan-500/20 mb-8"
                data-animate="fade-up"
            >
                <span class="relative flex h-2 w-2">
                    <span
                        class="animate-ping absolute inline-flex h-full w-full rounded-full bg-cyan-500 opacity-75"
                    ></span>
                    <span
                        class="relative inline-flex rounded-full h-2 w-2 bg-cyan-500"
                    ></span>
                </span>
                <span
                    class="text-sm font-medium text-blue-600 dark:text-cyan-400 uppercase tracking-wider"
                >
                    Trazabilidad y Monitoreo
                </span>
            </div>

            <!-- Title -->
            <h1
                class="text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight mb-6 max-w-4xl"
                data-animate="fade-up"
                data-animate-delay=".1s"
            >
                <span class="text-gray-900 dark:text-white"
                    >Monitorea tu
                </span><span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-blue-800 via-blue-600 to-cyan-500 dark:from-blue-400 dark:via-cyan-400 dark:to-cyan-300"
                    >producción</span
                >
                <br />
                <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-500 dark:from-cyan-400 dark:to-cyan-300"
                    >en tiempo real</span
                >
            </h1>

            <!-- Description -->
            <p
                class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mb-10 leading-relaxed"
                data-animate="fade-up"
                data-animate-delay=".2s"
            >
                Sistemas MES, dashboards de producción y trazabilidad completa
                para optimizar tu eficiencia operativa con datos en tiempo real.
            </p>

            <!-- CTAs -->
            <div
                class="flex flex-wrap justify-center gap-4 mb-12"
                data-animate="fade-up"
                data-animate-delay=".3s"
            >
                <a
                    href="#contact"
                    class="inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-blue-600 to-cyan-500 text-white font-semibold rounded-full hover:shadow-lg hover:shadow-blue-500/25 transition-all group"
                >
                    <span>Solicitar demo</span>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        class="w-5 h-5 group-hover:translate-x-1 transition-transform"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25"></path>
                    </svg>
                </a>
                <a
                    href="#services"
                    class="inline-flex items-center gap-3 px-8 py-4 border-2 border-gray-300 dark:border-gray-500 text-gray-900 dark:text-white font-semibold rounded-full hover:border-blue-600 dark:hover:border-cyan-400 hover:text-blue-600 dark:hover:text-cyan-400 hover:bg-blue-50 dark:hover:bg-cyan-500/10 transition-all"
                >
                    Ver soluciones
                </a>
            </div>

            <!-- Stats -->
            <div
                class="flex flex-wrap justify-center gap-8 lg:gap-16 mb-8"
                data-animate="fade-up"
                data-animate-delay=".4s"
            >
                <div class="text-center">
                    <div
                        class="text-3xl font-bold text-blue-600 dark:text-cyan-400"
                    >
                        50+
                    </div>
                    <div
                        class="text-sm text-gray-500 dark:text-gray-400 uppercase tracking-wider"
                    >
                        Líneas MES
                    </div>
                </div>
                <div class="hidden sm:block w-px bg-gray-200 dark:bg-gray-700">
                </div>
                <div class="text-center">
                    <div
                        class="text-3xl font-bold text-blue-600 dark:text-cyan-400"
                    >
                        99.9%
                    </div>
                    <div
                        class="text-sm text-gray-500 dark:text-gray-400 uppercase tracking-wider"
                    >
                        Trazabilidad
                    </div>
                </div>
                <div class="hidden sm:block w-px bg-gray-200 dark:bg-gray-700">
                </div>
                <div class="text-center">
                    <div
                        class="text-3xl font-bold text-blue-600 dark:text-cyan-400"
                    >
                        Real-time
                    </div>
                    <div
                        class="text-sm text-gray-500 dark:text-gray-400 uppercase tracking-wider"
                    >
                        Dashboard
                    </div>
                </div>
            </div>

            <!-- Visual element - MES Dashboard illustration (Centered & Tilted) -->
            <div
                class="relative w-full max-w-5xl mx-auto perspective-1000"
                data-animate="fade-up"
                data-animate-delay=".5s"
            >
                <div
                    class="relative transform rotate-x-12 hover:rotate-x-0 transition-transform duration-1000 ease-out preserve-3d"
                >
                    <!-- Main Dashboard card -->
                    <div
                        class="relative bg-white/95 dark:bg-gray-800/95 backdrop-blur-sm rounded-2xl shadow-2xl shadow-blue-500/10 dark:shadow-blue-900/30 p-2 sm:p-8 border border-gray-200 dark:border-gray-700"
                    >
                        <!-- Browser Bar Mockup -->
                        <div
                            class="flex items-center gap-2 mb-6 border-b border-gray-100 dark:border-gray-700 pb-4"
                        >
                            <div class="flex gap-1.5">
                                <div
                                    class="w-2.5 h-2.5 rounded-full bg-red-400"
                                >
                                </div>
                                <div
                                    class="w-2.5 h-2.5 rounded-full bg-yellow-400"
                                >
                                </div>
                                <div
                                    class="w-2.5 h-2.5 rounded-full bg-green-400"
                                >
                                </div>
                            </div>
                            <div
                                class="mx-auto bg-gray-100 dark:bg-gray-900 px-3 py-1 rounded-md text-xs text-gray-400 font-mono w-64 text-center"
                            >
                                insytech-mes.cloud
                            </div>
                        </div>

                        <!-- Header -->
                        <div class="flex items-center justify-between mb-8">
                            <div class="flex items-center gap-3">
                                <div
                                    class="w-10 h-10 rounded-xl bg-gradient-to-br from-[#005EB8] to-[#00B5E2] flex items-center justify-center"
                                >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke-width="2"
                                        stroke="currentColor"
                                        class="w-5 h-5 text-white"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z"
                                        ></path>
                                    </svg>
                                </div>
                                <div class="text-left">
                                    <div
                                        class="font-semibold text-gray-900 dark:text-white"
                                    >
                                        Panel de Control Global
                                    </div>
                                    <div
                                        class="text-sm text-gray-500 dark:text-gray-400"
                                    >
                                        Planta Principal - Monterrey, NL
                                    </div>
                                </div>
                            </div>
                            <div
                                class="flex items-center gap-2 px-3 py-1.5 bg-green-500/10 rounded-full"
                            >
                                <span
                                    class="w-2 h-2 rounded-full bg-green-500 animate-pulse"
                                ></span>
                                <span
                                    class="text-sm font-medium text-green-600 dark:text-green-400"
                                    >Sistema Operativo</span
                                >
                            </div>
                        </div>

                        <!-- Metrics grid -->
                        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
                            <div
                                class="p-4 bg-gray-50 dark:bg-gray-900/80 rounded-xl text-left border border-gray-200 dark:border-gray-700"
                            >
                                <div
                                    class="flex items-center justify-between mb-2"
                                >
                                    <span
                                        class="text-sm text-gray-500 dark:text-gray-400"
                                        >OEE Global</span
                                    >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke-width="1.5"
                                        stroke="currentColor"
                                        class="w-4 h-4 text-cyan-500"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z"
                                        ></path>
                                    </svg>
                                </div>
                                <div
                                    class="text-2xl font-bold text-gray-900 dark:text-white"
                                >
                                    87.3%
                                </div>
                                <div class="text-xs text-green-500 mt-1">
                                    ↑ 2.1% vs ayer
                                </div>
                            </div>
                            <div
                                class="p-4 bg-gray-50 dark:bg-gray-900/80 rounded-xl text-left border border-gray-200 dark:border-gray-700"
                            >
                                <div
                                    class="flex items-center justify-between mb-2"
                                >
                                    <span
                                        class="text-sm text-gray-500 dark:text-gray-400"
                                        >Producción</span
                                    >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke-width="1.5"
                                        stroke="currentColor"
                                        class="w-4 h-4 text-[#00B5E2]"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z"
                                        ></path>
                                    </svg>
                                </div>
                                <div
                                    class="text-2xl font-bold text-gray-900 dark:text-white"
                                >
                                    1,247
                                </div>
                                <div class="text-xs text-gray-400 mt-1">
                                    unidades/hora
                                </div>
                            </div>
                            <div
                                class="p-4 bg-gray-50 dark:bg-gray-900/80 rounded-xl text-left border border-gray-200 dark:border-gray-700"
                            >
                                <div
                                    class="flex items-center justify-between mb-2"
                                >
                                    <span
                                        class="text-sm text-gray-500 dark:text-gray-400"
                                        >Calidad</span
                                    >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke-width="1.5"
                                        stroke="currentColor"
                                        class="w-4 h-4 text-[#00B5E2]"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                        ></path>
                                    </svg>
                                </div>
                                <div
                                    class="text-2xl font-bold text-gray-900 dark:text-white"
                                >
                                    99.2%
                                </div>
                                <div class="text-xs text-green-500 mt-1">
                                    Meta: 98%
                                </div>
                            </div>
                            <div
                                class="p-4 bg-gray-50 dark:bg-gray-900/80 rounded-xl text-left border border-gray-200 dark:border-gray-700"
                            >
                                <div
                                    class="flex items-center justify-between mb-2"
                                >
                                    <span
                                        class="text-sm text-gray-500 dark:text-gray-400"
                                        >Tiempo Ciclo</span
                                    >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke-width="1.5"
                                        stroke="currentColor"
                                        class="w-4 h-4 text-[#00B5E2]"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"
                                        ></path>
                                    </svg>
                                </div>
                                <div
                                    class="text-2xl font-bold text-gray-900 dark:text-white"
                                >
                                    2.8s
                                </div>
                                <div class="text-xs text-gray-400 mt-1">
                                    promedio
                                </div>
                            </div>
                        </div>

                        <!-- Production chart mock -->
                        <div
                            class="relative h-48 w-full bg-gray-50 dark:bg-gray-900/30 rounded-xl p-4 overflow-hidden"
                        >
                            <div class="flex h-full items-end gap-2 px-2">
                                {
                                    [
                                        45, 72, 68, 85, 92, 88, 95, 82, 78, 90,
                                        87, 93, 85, 70, 75, 80, 85, 90, 95, 100,
                                    ].map((h, i) => (
                                        <div
                                            class="flex-1 bg-gradient-to-t from-[#005EB8] to-[#00B5E2] rounded-t opacity-80 hover:opacity-100 transition-opacity"
                                            style={`height: ${h}%`}
                                            title={`Hora ${i}: ${h}%`}
                                        />
                                    ))
                                }
                            </div>
                            <!-- Chart Line Overlay (fake) -->
                            <svg
                                class="absolute inset-0 w-full h-full pointer-events-none p-4"
                                preserveAspectRatio="none"
                            >
                                <path
                                    d="M0,150 Q50,100 100,110 T200,80 T300,60 T400,90 T500,40 T600,50 T700,30 T800,20"
                                    fill="none"
                                    stroke="#00B5E2"
                                    stroke-width="2"
                                    class="opacity-50"></path>
                            </svg>
                        </div>
                    </div>

                    <!-- Floating decorative elements -->
                    <div
                        class="absolute -right-8 top-1/4 bg-white dark:bg-gray-800 rounded-xl shadow-lg p-4 border border-gray-100 dark:border-gray-700 animate-float"
                        style="animation-delay: 1s;"
                    >
                        <div class="flex items-center gap-3">
                            <div
                                class="w-10 h-10 rounded-full bg-indigo-100 dark:bg-indigo-900/30 flex items-center justify-center"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="2"
                                    stroke="currentColor"
                                    class="w-5 h-5 text-indigo-600 dark:text-indigo-400"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <div
                                    class="text-sm font-semibold text-gray-900 dark:text-white"
                                >
                                    Alerta de Calidad
                                </div>
                                <div class="text-xs text-gray-500">
                                    Resuelto automáticamente
                                </div>
                            </div>
                        </div>
                    </div>

                    <div
                        class="absolute -left-6 bottom-1/3 bg-white dark:bg-gray-800 rounded-xl shadow-lg p-4 border border-gray-100 dark:border-gray-700 animate-float"
                        style="animation-delay: 2.5s;"
                    >
                        <div class="flex items-center gap-3">
                            <div
                                class="w-10 h-10 rounded-full bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-center"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="2"
                                    stroke="currentColor"
                                    class="w-5 h-5 text-emerald-600 dark:text-emerald-400"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <div
                                    class="text-sm font-semibold text-gray-900 dark:text-white"
                                >
                                    Lote #4521
                                </div>
                                <div class="text-xs text-gray-500">
                                    Completado exitosamente
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Container>
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2">
        <div
            class="w-6 h-10 rounded-full border-2 border-gray-300 dark:border-gray-600 flex items-start justify-center p-1"
        >
            <div
                class="w-1 h-2 bg-gray-400 dark:bg-gray-500 rounded-full animate-bounce"
            >
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes blob {
        0% {
            transform: translate(0px, 0px) scale(1);
        }
        33% {
            transform: translate(30px, -50px) scale(1.1);
        }
        66% {
            transform: translate(-20px, 20px) scale(0.9);
        }
        100% {
            transform: translate(0px, 0px) scale(1);
        }
    }

    .animate-blob {
        animation: blob 7s infinite;
    }

    .animation-delay-2000 {
        animation-delay: 2s;
    }

    .animation-delay-4000 {
        animation-delay: 4s;
    }
</style>
