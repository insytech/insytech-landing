---
import Flow from "./Flow.astro";
import MobileFlow from "./MobileFlow.astro";
---

<section class="automation-hero bg-slate-200/40 dark:bg-gray-950">
    <!-- Background pattern with curved lines and beams -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <!-- Curved beam patterns -->
        <svg
            class="absolute inset-0 w-full h-full opacity-10 dark:opacity-10"
            viewBox="0 0 1440 900"
            preserveAspectRatio="xMidYMid slice"
        >
            <!-- Animated curved beams -->
            <defs>
                <linearGradient id="beam1" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop
                        offset="0%"
                        class="text-blue-400/60 dark:text-purple-400/40"
                        stop-color="currentColor"></stop>
                    <stop
                        offset="50%"
                        class="text-indigo-500/80 dark:text-blue-500/60"
                        stop-color="currentColor"></stop>
                    <stop
                        offset="100%"
                        class="text-purple-500/40 dark:text-indigo-400/30"
                        stop-color="currentColor"></stop>
                </linearGradient>
                <linearGradient id="beam2" x1="100%" y1="0%" x2="0%" y2="100%">
                    <stop
                        offset="0%"
                        class="text-emerald-400/50 dark:text-cyan-400/30"
                        stop-color="currentColor"></stop>
                    <stop
                        offset="50%"
                        class="text-blue-500/70 dark:text-indigo-500/50"
                        stop-color="currentColor"></stop>
                    <stop
                        offset="100%"
                        class="text-indigo-500/30 dark:text-purple-400/20"
                        stop-color="currentColor"></stop>
                </linearGradient>
            </defs>

            <!-- Curved path 1 -->
            <path
                d="M0,500 Q360,400 720,600 T1440,550"
                stroke="url(#beam1)"
                stroke-width="3"
                fill="none"
                opacity="0.3"
            >
                <animate
                    attributeName="stroke-width"
                    values="2;4;2"
                    dur="12s"
                    repeatCount="indefinite"></animate>
            </path>

            <!-- Curved path 2 -->
            <path
                d="M0,400 Q480,250 960,450 T1440,400"
                stroke="url(#beam2)"
                stroke-width="2"
                fill="none"
                opacity="0.7"
            >
                <animate
                    attributeName="opacity"
                    values="0.5;1;0.5"
                    dur="15s"
                    repeatCount="indefinite"></animate>
            </path>

            <!-- Curved path 3 -->
            <path
                d="M1440,150 Q1080,300 720,200 T0,250"
                stroke="url(#beam1)"
                stroke-width="2"
                fill="none"
                opacity="0.6"
            >
                <animate
                    attributeName="stroke-width"
                    values="1;3;1"
                    dur="18s"
                    repeatCount="indefinite"></animate>
            </path>
        </svg>

        <!-- Geometric beam overlays -->
        <div
            class="absolute -z-50 top-1/4 left-1/4 w-96 h-96 bg-gradient-to-br from-blue-400/10 to-purple-300/10 dark:from-purple-400/10 dark:to-blue-500/10 rounded-full blur-3xl"
            style="animation: slow-pulse 8s ease-in-out infinite;"
        >
        </div>
        <div
            class="absolute -z-50 bottom-1/4 right-1/4 w-80 h-80 bg-gradient-to-tl from-emerald-300/10 to-indigo-500/10 dark:from-cyan-400/8 dark:to-indigo-500/8 rounded-full blur-3xl"
            style="animation: slow-pulse 12s ease-in-out infinite 3s;"
        >
        </div>

        <!-- Grid pattern overlay -->
        <div
            class="absolute inset-0 opacity-20 dark:opacity-10"
            style="background-image: radial-gradient(circle at 1px 1px, rgba(99, 102, 241, 0.3) 1px, transparent 0); background-size: 50px 50px;"
        >
        </div>

        <!-- Flowing beam lines -->
        <div class="absolute top-0 left-0 w-full h-full">
            <div
                class="absolute top-1/3 left-0 w-full h-px bg-gradient-to-r from-transparent via-blue-400/50 to-transparent dark:via-purple-400/30 animate-pulse"
            >
            </div>
            <div
                class="absolute top-2/3 left-0 w-full h-px bg-gradient-to-r from-transparent via-emerald-400/40 to-transparent dark:via-cyan-400/20 animate-pulse delay-500"
            >
            </div>
        </div>
    </div>
    <!-- Contenedor principal de dos columnas -->
    <div class="hero-main-container">
        <!-- Columna izquierda: Contenido principal -->
        <div class="hero-content">
            <div class="content-wrapper">
                <h1
                    class="text-4xl md:text-5xl lg:text-6xl font-extrabold mb-6 bg-gradient-to-r from-[#001489]/90 via-blue-500 to-indigo-600 dark:from-blue-400 dark:via-purple-400 dark:to-indigo-300 bg-clip-text text-transparent leading-tight"
                >
                    Automatización Inteligente para tu Negocio
                </h1>
                <p
                    class="text-lg md:text-xl leading-relaxed mb-8 text-gray-700 dark:text-gray-300"
                >
                    Transforma tus procesos con chatbots, RPA y flujos de
                    automatización personalizados. Conecta sistemas, optimiza
                    operaciones y escala sin límites.
                </p>
                <div class="flex flex-wrap gap-4 justify-start">
                    <a
                        href="#contact"
                        class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-500 to-indigo-600 dark:from-blue-500 dark:to-purple-500 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl hover:scale-105 hover:from-blue-600 hover:to-indigo-700 dark:hover:from-blue-400 dark:hover:to-purple-400 transition-all duration-300 ease-in-out"
                    >
                        Solicita una demo
                    </a>
                    <a
                        href="#services"
                        class="inline-flex items-center px-8 py-4 bg-transparent border-2 border-gray-400 dark:border-gray-500 text-gray-800 dark:text-white font-semibold rounded-xl hover:bg-gray-100 dark:hover:bg-gray-800 hover:border-gray-600 dark:hover:border-gray-300 backdrop-blur-sm transition-all duration-300 ease-in-out hover:scale-105"
                    >
                        Ver soluciones
                    </a>
                </div>
            </div>
        </div>

        <!-- Columna derecha: Área visual/animaciones -->
        <div class="hero-visual-area">
            <!-- Flow para desktop -->
            <div class="desktop-flow">
                <Flow />
            </div>
            <!-- MobileFlow para móviles -->
            <div class="mobile-flow-container">
                <MobileFlow />
            </div>
        </div>
    </div>

    <!-- Contenedor dedicado para animaciones dinámicas -->
    <div class="dynamic-animations-container" id="dynamic-container"></div>

    <!-- Gradiente animado de fondo (reemplaza partículas) -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none z-[1]">
        <div
            class="absolute inset-0 bg-gradient-to-br from-blue-400/5 via-transparent to-purple-500/5 dark:from-purple-400/10 dark:via-transparent dark:to-blue-500/10 animate-[gradient-shift_15s_ease-in-out_infinite]"
        >
        </div>
        <div
            class="absolute inset-0 bg-gradient-to-tl from-indigo-500/5 via-transparent to-emerald-400/5 dark:from-cyan-400/8 dark:via-transparent dark:to-indigo-400/8 animate-[gradient-shift_20s_ease-in-out_infinite_reverse]"
        >
        </div>
    </div>
</section>

<style>
    .automation-hero {
        position: relative;
        min-height: 100vh;
        overflow: hidden;
        display: flex;
        align-items: center;
        color: white;
        contain: layout style;
        padding: 2rem;
        /* Añadir padding superior para evitar overlap con navbar */
        padding-top: 6rem;
    }

    /* Contenedor principal de dos columnas con nuevas proporciones */
    .hero-main-container {
        position: relative;
        z-index: 10;
        width: 100%;
        max-width: 1400px; /* Aumentado para dar más espacio */
        margin: 0 auto;
        display: flex;
        align-items: center;
        gap: 3rem; /* Aumentado el gap */
        min-height: 60vh;
    }

    .hero-content {
        flex: 0 0 40%; /* Reducido de flex: 1 a 40% fijo */
        max-width: 500px; /* Reducido el max-width */
        contain: layout style;
        transform: none !important;
        will-change: auto;
    }

    .content-wrapper {
        position: static;
        contain: layout;
    }

    /* Área visual expandida para más protagonismo */
    .hero-visual-area {
        flex: 1; /* Toma todo el espacio restante (60%) */
        position: relative;
        min-height: 600px; /* Aumentado significativamente */
        display: flex;
        align-items: center;
        justify-content: center;
        /* Añadir más espacio visual */
        padding: 2rem;
    }

    .dynamic-animations-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 8;
        overflow: hidden;
        contain: layout style paint;
    }

    .hero-content h1 {
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 800;
        margin-bottom: 1.5rem;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1.1;
    }

    .hero-content p {
        font-size: 1.2rem;
        line-height: 1.6;
        margin-bottom: 2rem;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        padding: 1rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .btn-primary {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        color: white;
        box-shadow: 0 8px 25px rgba(99, 102, 241, 0.3);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 35px rgba(99, 102, 241, 0.4);
    }

    .btn-secondary {
        background: transparent;
        color: white;
        border-color: rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(10px);
    }

    .btn-secondary:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.5);
        transform: translateY(-2px);
    }

    /* Mostrar/ocultar componentes según dispositivo */
    .desktop-flow {
        display: block;
        width: 100%;
        height: 100%;
    }

    .mobile-flow-container {
        display: none;
        width: 100%;
    }

    /* Responsividad para pantallas grandes */
    @media (min-width: 1200px) {
        .hero-main-container {
            max-width: 1600px;
            gap: 4rem;
        }

        .hero-content {
            flex: 0 0 35%;
        }

        .hero-visual-area {
            min-height: 700px;
            padding: 3rem;
        }
    }

    @media (min-width: 1440px) {
        .hero-visual-area {
            min-height: 800px;
        }
    }

    /* Responsividad para tablets */
    @media (max-width: 1024px) {
        .desktop-flow {
            display: none;
        }

        .mobile-flow-container {
            display: block;
        }

        .hero-main-container {
            flex-direction: column;
            min-height: calc(
                100vh - 8rem
            ); /* Ajustar altura considerando padding superior */
            text-align: center;
            padding: 1rem;
            gap: 3rem;
            justify-content: center;
            padding-top: 3rem; /* Añadir más espacio superior */
        }

        .hero-content {
            flex: none;
            max-width: 100%;
        }

        .automation-hero {
            min-height: 100vh;
            padding-top: 6rem; /* Aumentado de 5rem a 6rem */
        }

        .hero-visual-area {
            order: 2;
            min-height: 350px;
        }

        /* Centrar botones específicamente */
        .hero-content .flex {
            justify-content: center;
        }
    }

    /* Responsividad para móviles */
    @media (max-width: 768px) {
        .automation-hero {
            min-height: 100vh;
            padding: 1rem;
            padding-top: 6rem; /* Aumentado de 5rem a 6rem */
            display: flex;
            align-items: flex-start;
            justify-content: center;
        }

        .hero-main-container {
            gap: 2rem;
            min-height: calc(100vh - 7rem); /* Ajustado para el nuevo padding */
            padding: 1rem;
            justify-content: center;
            align-items: center;
            padding-top: 3rem; /* Añadir más espacio superior */
        }

        .hero-content {
            text-align: center;
            width: 100%;
        }

        .hero-content h1 {
            font-size: clamp(2rem, 6vw, 3rem);
            margin-bottom: 1rem;
        }

        .hero-content p {
            font-size: 1.1rem;
            margin-bottom: 1.5rem;
        }

        .hero-visual-area {
            min-height: 300px;
            padding: 1rem;
        }

        /* Asegurar que los botones estén centrados */
        .hero-content .flex {
            justify-content: center;
            gap: 1rem;
        }

        .hero-content .flex a {
            flex: 1;
            max-width: 200px;
            text-align: center;
            justify-content: center;
        }
    }

    /* Para pantallas muy pequeñas */
    @media (max-width: 480px) {
        .automation-hero {
            padding-top: 5rem; /* Aumentado de 4rem a 5rem */
        }

        .hero-main-container {
            min-height: calc(100vh - 6rem); /* Ajustado para el nuevo padding */
            gap: 1.5rem;
            padding-top: 2.5rem; /* Añadir espacio superior */
        }

        .hero-content h1 {
            font-size: clamp(1.8rem, 7vw, 2.5rem);
        }

        .hero-content p {
            font-size: 1rem;
        }

        .hero-content .flex {
            flex-direction: column;
            align-items: center;
            gap: 0.75rem;
        }

        .hero-content .flex a {
            width: 100%;
            max-width: 280px;
        }

        .hero-visual-area {
            min-height: 250px;
        }
    }

    /* Flotar animaciones */
    @keyframes float {
        0%,
        100% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-20px);
        }
    }

    @keyframes slow-pulse {
        0%,
        100% {
            opacity: 0.4;
            transform: scale(1);
        }
        50% {
            opacity: 0.8;
            transform: scale(1.1);
        }
    }

    @keyframes gradient-shift {
        0%,
        100% {
            opacity: 0.5;
            transform: scale(1) rotate(0deg);
        }
        50% {
            opacity: 0.8;
            transform: scale(1.1) rotate(3deg);
        }
    }
</style>
