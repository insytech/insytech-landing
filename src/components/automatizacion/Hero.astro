---
import Flow from "./Flow.astro";
---

<section class="automation-hero">
    <div class="hero-content">
        <div class="content-wrapper">
            <h1>Automatización Inteligente para tu Negocio</h1>
            <p>
                Transforma tus procesos with chatbots, RPA y flujos de
                automatización personalizados. Conecta sistemas, optimiza
                operaciones y escala sin límites.
            </p>
            <div class="cta-buttons">
                <a href="#cta" class="btn btn-primary">Solicita una demo</a>
                <a href="#services" class="btn btn-secondary">Ver soluciones</a>
            </div>
        </div>
    </div>

    <!-- Contenedor dedicado para animaciones dinámicas -->
    <div class="dynamic-animations-container" id="dynamic-container"></div>

    <Flow />

    <!-- Partículas de fondo -->
    <div class="background-particles">
        <div class="particle particle-1"></div>
        <div class="particle particle-2"></div>
        <div class="particle particle-3"></div>
        <div class="particle particle-4"></div>
        <div class="particle particle-5"></div>
    </div>
</section>

<style>
    .automation-hero {
        position: relative;
        min-height: 100vh;
        background: linear-gradient(
            135deg,
            #0f0f23 0%,
            #1a1a3e 50%,
            #2d1b69 100%
        );
        overflow: hidden;
        display: flex;
        align-items: center;
        color: white;
        contain: layout style; /* NUEVO: Contener cambios de layout */
    }

    .hero-content {
        position: relative;
        z-index: 10;
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        contain: layout style; /* NUEVO: Aislar completamente el contenido */
        transform: none !important;
        will-change: auto;
    }

    .content-wrapper {
        max-width: 600px;
        position: static; /* CAMBIO: Usar static en lugar de relative */
        contain: layout; /* NUEVO: Contener cambios de layout */
    }

    /* NUEVO: Contenedor dedicado para animaciones dinámicas */
    .dynamic-animations-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 8;
        overflow: hidden;
        contain: layout style paint; /* NUEVO: Contener todos los cambios */
    }

    .hero-content h1 {
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 800;
        margin-bottom: 1.5rem;
        background: linear-gradient(135deg, #ffffff 0%, #a78bfa 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1.1;
    }

    .hero-content p {
        font-size: 1.2rem;
        line-height: 1.6;
        margin-bottom: 2rem;
        color: #e2e8f0;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        padding: 1rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .btn-primary {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        color: white;
        box-shadow: 0 8px 25px rgba(99, 102, 241, 0.3);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 35px rgba(99, 102, 241, 0.4);
    }

    .btn-secondary {
        background: transparent;
        color: white;
        border-color: rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(10px);
    }

    .btn-secondary:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.5);
        transform: translateY(-2px);
    }

    .background-particles {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: 1;
        pointer-events: none;
        contain: layout style paint; /* NUEVO: Contener cambios */
    }

    .particle {
        position: absolute;
        width: 10px;
        height: 10px;
        background: rgba(255, 255, 255, 0.5);
        border-radius: 50%;
        animation: float 5s infinite ease-in-out;
    }

    .particle-1 {
        top: 20%;
        left: 15%;
        animation-delay: 0s;
        animation-duration: 6s;
    }

    .particle-2 {
        top: 50%;
        left: 30%;
        animation-delay: 1s;
        animation-duration: 8s;
    }

    .particle-3 {
        top: 70%;
        left: 70%;
        animation-delay: 2s;
        animation-duration: 7s;
    }

    .particle-4 {
        top: 40%;
        left: 80%;
        animation-delay: 3s;
        animation-duration: 5s;
    }

    .particle-5 {
        top: 10%;
        left: 60%;
        animation-delay: 4s;
        animation-duration: 9s;
    }

    @keyframes float {
        0% {
            transform: translateY(0) translateX(0);
            opacity: 1;
        }
        50% {
            transform: translateY(-20px) translateX(10px);
            opacity: 0.7;
        }
        100% {
            transform: translateY(0) translateX(0);
            opacity: 1;
        }
    }

    @media (max-width: 768px) {
        .automation-hero {
            min-height: 80vh;
        }

        .hero-content {
            text-align: center;
        }

        .content-wrapper {
            max-width: 100%;
        }

        .cta-buttons {
            justify-content: center;
        }
    }
</style>
