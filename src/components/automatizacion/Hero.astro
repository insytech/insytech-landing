---
import Flow from "./Flow.astro";
---

<section class="automation-hero">
    <!-- Contenedor principal de dos columnas -->
    <div class="hero-main-container">
        <!-- Columna izquierda: Contenido principal -->
        <div class="hero-content">
            <div class="content-wrapper">
                <h1>Automatización Inteligente para tu Negocio</h1>
                <p>
                    Transforma tus procesos with chatbots, RPA y flujos de
                    automatización personalizados. Conecta sistemas, optimiza
                    operaciones y escala sin límites.
                </p>
                <div class="cta-buttons">
                    <a href="#cta" class="btn btn-primary">Solicita una demo</a>
                    <a href="#services" class="btn btn-secondary"
                        >Ver soluciones</a
                    >
                </div>
            </div>
        </div>

        <!-- Columna derecha: Área visual/animaciones -->
        <div class="hero-visual-area">
            <Flow />
        </div>
    </div>

    <!-- Contenedor dedicado para animaciones dinámicas -->
    <div class="dynamic-animations-container" id="dynamic-container"></div>

    <!-- Partículas de fondo -->
    <div class="background-particles">
        <div class="particle particle-1"></div>
        <div class="particle particle-2"></div>
        <div class="particle particle-3"></div>
        <div class="particle particle-4"></div>
        <div class="particle particle-5"></div>
    </div>
</section>

<style>
    .automation-hero {
        position: relative;
        min-height: 100vh;
        background: linear-gradient(
            135deg,
            #0f0f23 0%,
            #1a1a3e 50%,
            #2d1b69 100%
        );
        overflow: hidden;
        display: flex;
        align-items: center;
        color: white;
        contain: layout style;
        padding: 2rem;
    }

    /* Contenedor principal de dos columnas con nuevas proporciones */
    .hero-main-container {
        position: relative;
        z-index: 10;
        width: 100%;
        max-width: 1400px; /* Aumentado para dar más espacio */
        margin: 0 auto;
        display: flex;
        align-items: center;
        gap: 3rem; /* Aumentado el gap */
        min-height: 60vh;
    }

    .hero-content {
        flex: 0 0 40%; /* Reducido de flex: 1 a 40% fijo */
        max-width: 500px; /* Reducido el max-width */
        contain: layout style;
        transform: none !important;
        will-change: auto;
    }

    .content-wrapper {
        position: static;
        contain: layout;
    }

    /* Área visual expandida para más protagonismo */
    .hero-visual-area {
        flex: 1; /* Toma todo el espacio restante (60%) */
        position: relative;
        min-height: 600px; /* Aumentado significativamente */
        display: flex;
        align-items: center;
        justify-content: center;
        /* Añadir más espacio visual */
        padding: 2rem;
    }

    .dynamic-animations-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 8;
        overflow: hidden;
        contain: layout style paint;
    }

    .hero-content h1 {
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 800;
        margin-bottom: 1.5rem;
        background: linear-gradient(135deg, #ffffff 0%, #a78bfa 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1.1;
    }

    .hero-content p {
        font-size: 1.2rem;
        line-height: 1.6;
        margin-bottom: 2rem;
        color: #e2e8f0;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        padding: 1rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .btn-primary {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        color: white;
        box-shadow: 0 8px 25px rgba(99, 102, 241, 0.3);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 35px rgba(99, 102, 241, 0.4);
    }

    .btn-secondary {
        background: transparent;
        color: white;
        border-color: rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(10px);
    }

    .btn-secondary:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.5);
        transform: translateY(-2px);
    }

    .background-particles {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: 1;
        pointer-events: none;
        contain: layout style paint;
    }

    .particle {
        position: absolute;
        width: 10px;
        height: 10px;
        background: rgba(255, 255, 255, 0.5);
        border-radius: 50%;
        animation: float 5s infinite ease-in-out;
    }

    .particle-1 {
        top: 20%;
        left: 15%;
        animation-delay: 0s;
        animation-duration: 6s;
    }

    .particle-2 {
        top: 50%;
        left: 30%;
        animation-delay: 1s;
        animation-duration: 8s;
    }

    .particle-3 {
        top: 70%;
        left: 70%;
        animation-delay: 2s;
        animation-duration: 7s;
    }

    .particle-4 {
        top: 40%;
        left: 80%;
        animation-delay: 3s;
        animation-duration: 5s;
    }

    .particle-5 {
        top: 10%;
        left: 60%;
        animation-delay: 4s;
        animation-duration: 9s;
    }

    @keyframes float {
        0% {
            transform: translateY(0) translateX(0);
            opacity: 1;
        }
        50% {
            transform: translateY(-20px) translateX(10px);
            opacity: 0.7;
        }
        100% {
            transform: translateY(0) translateX(0);
            opacity: 1;
        }
    }

    /* Responsividad móvil - contenido se apila verticalmente */
    @media (min-width: 1200px) {
        .hero-main-container {
            max-width: 1600px; /* Aún más espacio en pantallas grandes */
            gap: 4rem;
        }

        .hero-content {
            flex: 0 0 35%; /* Aún menos espacio para el texto en pantallas grandes */
        }

        .hero-visual-area {
            min-height: 700px; /* Más altura en pantallas grandes */
            padding: 3rem;
        }
    }

    @media (min-width: 1440px) {
        .hero-visual-area {
            min-height: 800px; /* Máxima altura para pantallas muy grandes */
        }
    }

    @media (max-width: 1024px) {
        .hero-main-container {
            flex-direction: column;
            text-align: center;
            gap: 3rem;
        }

        .hero-content {
            flex: none;
            max-width: 100%;
        }

        .hero-visual-area {
            order: 2;
            width: 100%;
            min-height: 500px; /* Aumentado de 400px a 500px */
            padding: 1rem;
        }
    }

    @media (max-width: 768px) {
        .automation-hero {
            min-height: 100vh; /* Aumentado de 80vh a 100vh */
            padding: 1rem;
        }

        .hero-main-container {
            gap: 2rem;
            min-height: 90vh; /* Aumentado para dar más altura total */
        }

        .hero-visual-area {
            min-height: 450px; /* Aumentado significativamente de 350px */
            padding: 1rem; /* Aumentado el padding */
        }

        .cta-buttons {
            justify-content: center;
        }

        .hero-content h1 {
            font-size: clamp(2rem, 6vw, 3rem);
        }

        .hero-content p {
            font-size: 1.1rem;
        }
    }

    /* Nuevas reglas específicas para móviles pequeños */
    @media (max-width: 480px) {
        .automation-hero {
            min-height: 155vh; /* Aún más altura en móviles muy pequeños */
        }

        .hero-visual-area {
            min-height: 800px; /* Mantener altura considerable */
            padding-top: 0px;
            padding-bottom: 0;
        }
    }
</style>
