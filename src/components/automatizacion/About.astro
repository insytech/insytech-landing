---
import Bot from "./Bot.astro";
---

<section
    class="chatbots-about relative min-h-screen pt-12 bg-gradient-to-br from-slate-200/40 via-slate-200/40 to-slate-200/40 dark:from-gray-950 dark:via-gray-950 dark:to-gray-950 overflow-hidden"
>
    <!-- Background pattern with curved lines and beams similar to hero -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <!-- Additional flowing curves -->
        <path
            d="M200,100 Q600,200 1000,50 Q1200,0 1440,100"
            stroke="url(#aboutBeam2)"
            stroke-width="1"
            fill="none"
            opacity="0.4"
            style="z-index: -1;"
        >
            <animate
                attributeName="stroke-width"
                values="0.5;2;0.5"
                dur="16s"
                repeatCount="indefinite"></animate>
        </path>
        <!-- Curved beam patterns -->
        <svg
            class="absolute inset-0 w-full h-full opacity-10 dark:opacity-10"
            viewBox="0 0 1440 900"
            preserveAspectRatio="xMidYMid slice"
        >
            <!-- Animated curved beams -->
            <defs>
                <linearGradient
                    id="aboutBeam1"
                    x1="0%"
                    y1="0%"
                    x2="100%"
                    y2="100%"
                >
                    <stop
                        offset="0%"
                        class="text-[#00B5E2]/40 dark:text-[#00B5E2]/60"
                        stop-color="currentColor"></stop>
                    <stop
                        offset="50%"
                        class="text-[#005EB8]/60 dark:text-[#005EB8]/80"
                        stop-color="currentColor"></stop>
                    <stop
                        offset="100%"
                        class="text-[#001489]/30 dark:text-[#001489]/50"
                        stop-color="currentColor"></stop>
                </linearGradient>
                <linearGradient
                    id="aboutBeam2"
                    x1="100%"
                    y1="0%"
                    x2="0%"
                    y2="100%"
                >
                    <stop
                        offset="0%"
                        class="text-[#005EB8]/50 dark:text-[#005EB8]/70"
                        stop-color="currentColor"></stop>
                    <stop
                        offset="50%"
                        class="text-[#00B5E2]/70 dark:text-[#00B5E2]/90"
                        stop-color="currentColor"></stop>
                    <stop
                        offset="100%"
                        class="text-[#001489]/40 dark:text-[#001489]/60"
                        stop-color="currentColor"></stop>
                </linearGradient>
            </defs>

            <!-- Curved path 1 -->
            <path
                d="M0,350 Q200,250 400,400 Q600,550 800,450 Q1000,350 1200,500 T1440,400"
                stroke="url(#aboutBeam1)"
                stroke-width="2"
                fill="none"
                opacity="1"></path>

            <!-- Curved path 2 -->
            <path
                d="M1440,200 Q1200,150 960,300 Q720,450 480,250 Q240,50 0,200"
                stroke="url(#aboutBeam2)"
                stroke-width="2"
                fill="none"
                opacity="1"></path>

            <!-- Curved path 3 -->
            <path
                d="M0,600 Q360,500 720,650 Q1080,800 1440,700"
                stroke="url(#aboutBeam1)"
                stroke-width="2"
                fill="none"
                opacity="1"></path>
        </svg>

        <!-- Glow background unificado -->
        <div
            class="absolute -z-50 top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-gradient-to-br from-[#00B5E2]/8 via-[#005EB8]/6 to-[#001489]/8 dark:from-[#00B5E2]/12 dark:via-[#005EB8]/10 dark:to-[#001489]/12 rounded-full blur-3xl"
            style="animation: slow-pulse 12s ease-in-out infinite;"
        >
        </div>

        <!-- Grid pattern overlay with hero colors -->
        <div
            class="absolute inset-0 opacity-15 dark:opacity-8"
            style="background-image: radial-gradient(circle at 1px 1px, rgba(0, 180, 226, 0.3) 1px, transparent 0); background-size: 60px 60px;"
        >
        </div>

        <!-- Flowing beam lines with hero colors (reducidos de 3 a 2) -->
        <div class="absolute top-0 left-0 w-full h-full">
            <div
                class="absolute top-1/3 left-0 w-full h-px bg-gradient-to-r from-transparent via-[#00B5E2]/10 to-transparent dark:via-[#00B5E2]/20"
                style="animation: beam-flow 8s ease-in-out infinite;"
            >
            </div>
            <div
                class="absolute top-2/3 left-0 w-full h-px bg-gradient-to-r from-transparent via-[#005EB8]/10 to-transparent dark:via-[#005EB8]/20"
                style="animation: beam-flow 10s ease-in-out infinite 2s;"
            >
            </div>
        </div>
    </div>

    <!-- Background decorative elements -->
    <div
        class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg%20width%3D%2260%22%20height%3D%2260%22%20viewBox%3D%220%200%2060%2060%22%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%3E%3Cg%20fill%3D%22none%22%20fill-rule%3D%22evenodd%22%3E%3Cg%20fill%3D%22%23005EB8%22%20fill-opacity%3D%220.03%22%3E%3Ccircle%20cx%3D%227%22%20cy%3D%227%22%20r%3D%227%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-10 dark:opacity-10"
    >
    </div>

    <div class="container mx-auto px-6 py-20 relative z-10">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
            <!-- Content Column -->
            <div class="space-y-8">
                <div class="space-y-6">
                    <h2
                        class="text-4xl lg:text-5xl font-bold text-slate-900 dark:text-white leading-tight"
                    >
                        ¿Por qué elegir
                        <span
                            class="bg-gradient-to-r from-[#005EB8] to-[#001489] dark:from-[#00B5E2] dark:to-[#005EB8] bg-clip-text text-transparent"
                        >
                            nuestros chatbots?
                        </span>
                    </h2>

                    <div
                        class="w-20 h-1 bg-gradient-to-r from-[#00B5E2] to-[#005EB8] dark:from-[#00B5E2] dark:to-[#001489] rounded-full"
                    >
                    </div>
                </div>

                <p
                    class="text-lg lg:text-xl text-slate-600 dark:text-slate-300 leading-relaxed"
                >
                    Nuestros chatbots utilizan
                    <span
                        class="text-[#005EB8] dark:text-[#00B5E2] font-semibold"
                        >inteligencia artificial</span
                    >
                    para interactuar con tus clientes de manera eficiente y personalizada,
                    <span
                        class="text-[#001489] dark:text-[#005EB8] font-semibold"
                        >disponibles 24/7</span
                    >. Integramos soluciones a medida para ventas, soporte y
                    automatización de procesos, adaptándonos a las necesidades
                    de tu empresa.
                </p>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 pt-8">
                    <div
                        class="flex items-center space-x-3 p-4 bg-white/60 dark:bg-white/10 backdrop-blur-sm rounded-lg border border-slate-200 dark:border-[#005EB8]/30 shadow-sm"
                    >
                        <div
                            class="w-3 h-3 bg-[#00B5E2] dark:bg-[#00B5E2] rounded-full animate-pulse"
                        >
                        </div>
                        <span class="text-slate-800 dark:text-white font-medium"
                            >24/7 Disponible</span
                        >
                    </div>
                    <div
                        class="flex items-center space-x-3 p-4 bg-white/60 dark:bg-white/10 backdrop-blur-sm rounded-lg border border-slate-200 dark:border-[#005EB8]/30 shadow-sm"
                    >
                        <div
                            class="w-3 h-3 bg-[#005EB8] dark:bg-[#005EB8] rounded-full animate-pulse"
                        >
                        </div>
                        <span class="text-slate-800 dark:text-white font-medium"
                            >IA Avanzada</span
                        >
                    </div>
                    <div
                        class="flex items-center space-x-3 p-4 bg-white/60 dark:bg-white/10 backdrop-blur-sm rounded-lg border border-slate-200 dark:border-[#005EB8]/30 shadow-sm"
                    >
                        <div
                            class="w-3 h-3 bg-[#001489] dark:bg-[#001489] rounded-full animate-pulse"
                        >
                        </div>
                        <span class="text-slate-800 dark:text-white font-medium"
                            >Personalizable</span
                        >
                    </div>
                    <div
                        class="flex items-center space-x-3 p-4 bg-white/60 dark:bg-white/10 backdrop-blur-sm rounded-lg border border-slate-200 dark:border-[#005EB8]/30 shadow-sm"
                    >
                        <div
                            class="w-3 h-3 bg-[#00B5E2] dark:bg-[#00B5E2] rounded-full animate-pulse"
                        >
                        </div>
                        <span class="text-slate-800 dark:text-white font-medium"
                            >Integración Fácil</span
                        >
                    </div>
                </div>
            </div>

            <!-- RunnerBot Column -->
            <div class="relative flex justify-center items-center">
                <div class="runner-bot-container relative">
                    <!-- Glow effect sutil -->
                    <div
                        class="absolute inset-0 bg-gradient-to-r from-[#00B5E2]/30 via-[#005EB8]/20 to-[#001489]/30 rounded-full blur-3xl opacity-10 dark:opacity-15"
                    >
                    </div>

                    <!-- Main bot circle con gradiente suave -->
                    <div
                        id="runnerBot"
                        class="relative w-[20rem] h-[20rem] lg:w-[32rem] lg:h-[32rem] bg-gradient-to-br from-white via-slate-50 to-slate-100 dark:from-slate-800 dark:via-slate-800/90 dark:to-slate-900 rounded-full flex items-center justify-center shadow-xl border border-slate-200/50 dark:border-slate-700/30"
                    >
                        <!-- Inner circle limpio -->
                        <div
                            class="w-80 h-80 lg:w-[28rem] lg:h-[28rem] bg-gradient-to-br from-white via-slate-50 to-white dark:from-slate-700/90 dark:via-slate-800/80 dark:to-slate-700/90 rounded-full flex items-center justify-center relative overflow-hidden border border-slate-100 dark:border-slate-600/30 shadow-inner"
                        >
                            <Bot />
                        </div>

                        <!-- Gradiente animado alrededor del bot (reemplaza partículas) -->
                        <div
                            class="absolute inset-0 overflow-hidden rounded-full"
                        >
                            <div
                                class="absolute inset-0 bg-gradient-conic from-[#00B5E2]/10 via-transparent to-[#005EB8]/10 dark:from-[#00B5E2]/10 dark:via-transparent dark:to-[#005EB8]/10"
                                style="animation: spin-slow 20s linear infinite;"
                            >
                            </div>
                        </div>

                        <!-- Resplandor suave central -->
                        <div
                            class="absolute inset-0 opacity-30 dark:opacity-40"
                        >
                            <div
                                class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-3/4 h-3/4 bg-gradient-radial from-[#00B5E2]/10 to-transparent dark:from-[#00B5E2]/10 dark:to-transparent rounded-full"
                                style="animation: pulse-glow 4s ease-in-out infinite;"
                            >
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .chatbots-about {
        position: relative;
    }

    .particle {
        animation: float 3s ease-in-out infinite;
        transition: all 0.3s ease-out;
    }

    .particle:hover {
        transform: scale(1.5) translateY(-5px);
        opacity: 1 !important;
    }

    .runner-bot-container {
        perspective: 1000px;
        transition: all 0.5s ease-out;
    }

    .runner-bot-container:hover {
        /* Hover muy sutil */
    }

    #runnerBot {
        transition: all 0.5s ease-out;
    }

    #runnerBot:hover {
        transform: scale(1.02);
        filter: brightness(1.02);
    }

    /* Animaciones mejoradas para las partículas */
    .particle:nth-child(1) {
        animation: floatComplex1 4s ease-in-out infinite;
    }

    .particle:nth-child(2) {
        animation: floatComplex2 3.5s ease-in-out infinite;
    }

    .particle:nth-child(3) {
        animation: floatComplex3 4.5s ease-in-out infinite;
    }

    .particle:nth-child(4) {
        animation: floatComplex4 3.8s ease-in-out infinite;
    }

    .particle:nth-child(5) {
        animation: floatComplex5 4.2s ease-in-out infinite;
    }

    @keyframes floatComplex1 {
        0%,
        100% {
            transform: translateY(0px) translateX(0px) rotate(0deg) scale(1);
        }
        25% {
            transform: translateY(-12px) translateX(5px) rotate(90deg)
                scale(1.1);
        }
        50% {
            transform: translateY(-20px) translateX(0px) rotate(180deg)
                scale(1.2);
        }
        75% {
            transform: translateY(-12px) translateX(-5px) rotate(270deg)
                scale(1.1);
        }
    }

    @keyframes floatComplex2 {
        0%,
        100% {
            transform: translateY(0px) translateX(0px) rotate(0deg) scale(1);
        }
        30% {
            transform: translateY(-8px) translateX(-8px) rotate(120deg)
                scale(0.9);
        }
        60% {
            transform: translateY(-15px) translateX(8px) rotate(240deg)
                scale(1.3);
        }
        80% {
            transform: translateY(-5px) translateX(-3px) rotate(300deg)
                scale(1.1);
        }
    }

    @keyframes floatComplex3 {
        0%,
        100% {
            transform: translateY(0px) translateX(0px) rotate(0deg) scale(1);
        }
        20% {
            transform: translateY(-10px) translateX(10px) rotate(72deg)
                scale(1.2);
        }
        40% {
            transform: translateY(-18px) translateX(-5px) rotate(144deg)
                scale(0.8);
        }
        60% {
            transform: translateY(-22px) translateX(3px) rotate(216deg)
                scale(1.4);
        }
        80% {
            transform: translateY(-8px) translateX(-8px) rotate(288deg)
                scale(1.1);
        }
    }

    @keyframes floatComplex4 {
        0%,
        100% {
            transform: translateY(0px) translateX(0px) rotate(0deg) scale(1);
        }
        33% {
            transform: translateY(-6px) translateX(-6px) rotate(110deg)
                scale(1.3);
        }
        66% {
            transform: translateY(-14px) translateX(12px) rotate(220deg)
                scale(0.7);
        }
    }

    @keyframes floatComplex5 {
        0%,
        100% {
            transform: translateY(0px) translateX(0px) rotate(0deg) scale(1);
        }
        40% {
            transform: translateY(-16px) translateX(8px) rotate(160deg)
                scale(1.1);
        }
        70% {
            transform: translateY(-12px) translateX(-10px) rotate(280deg)
                scale(1.2);
        }
    }

    /* Efectos de brillo mejorados con colores del hero */
    .runner-bot-container:hover .absolute.inset-0.bg-gradient-to-r {
        animation: pulseGlow 2s ease-in-out infinite;
    }

    @keyframes pulseGlow {
        0%,
        100% {
            opacity: 0.2;
            transform: scale(1);
        }
        50% {
            opacity: 0.35;
            transform: scale(1.05);
        }
    }

    @keyframes slow-pulse {
        0%,
        100% {
            opacity: 0.4;
            transform: scale(1);
        }
        50% {
            opacity: 0.8;
            transform: scale(1.1);
        }
    }

    /* Mejoras para modo dark con colores del hero */
    @media (prefers-color-scheme: dark) {
        .chatbots-about {
            --bot-shadow: 0 25px 50px -12px rgba(0, 20, 137, 0.3);
            --bot-shadow-hover: 0 35px 70px -12px rgba(0, 20, 137, 0.5);
        }
    }

    #runnerBot {
        box-shadow: var(--bot-shadow, 0 25px 50px -12px rgba(0, 0, 0, 0.25));
        transition: box-shadow 0.4s ease-out;
    }

    #runnerBot:hover {
        box-shadow: var(
            --bot-shadow-hover,
            0 35px 70px -12px rgba(0, 20, 137, 0.5)
        );
    }

    /* Animación suave para los puntos de luz */
    .runner-bot-container:hover .absolute.inset-0.opacity-40 > div {
        animation: lightPulse 2.5s ease-in-out infinite;
        transform: scale(1.2);
    }

    @keyframes lightPulse {
        0%,
        100% {
            opacity: 0.4;
            transform: scale(1.2);
        }
        50% {
            opacity: 0.8;
            transform: scale(1.5);
        }
    }

    @keyframes spin-slow {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }

    @keyframes pulse-glow {
        0%,
        100% {
            opacity: 0.3;
            transform: translate(-50%, -50%) scale(0.95);
        }
        50% {
            opacity: 0.6;
            transform: translate(-50%, -50%) scale(1.05);
        }
    }

    @keyframes beam-flow {
        0%,
        100% {
            opacity: 0.3;
            transform: scaleX(0.8);
        }
        50% {
            opacity: 0.6;
            transform: scaleX(1);
        }
    }
</style>
