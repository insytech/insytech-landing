---
import Container from "../shared/Container.astro";

const steps = [
    {
        number: "01",
        title: "Análisis y Descubrimiento",
        description:
            "Entendemos sus procesos actuales, identificamos cuellos de botella y definimos los requerimientos técnicos y funcionales del proyecto.",
    },
    {
        number: "02",
        title: "Diseño de Arquitectura y UX",
        description:
            "Estructuramos bases de datos escalables y diseñamos interfaces intuitivas enfocadas en la experiencia del operador industrial.",
    },
    {
        number: "03",
        title: "Desarrollo Ágil",
        description:
            "Construimos el software mediante iteraciones constantes, permitiendo retroalimentación temprana y ajustes rápidos según sus necesidades.",
    },
    {
        number: "04",
        title: "Implementación y Pruebas",
        description:
            "Realizamos despliegues controlados en sitio, garantizando la correcta integración con sus sistemas físicos y digitales existentes.",
    },
];
---

<section class="py-24 bg-gray-50 dark:bg-[#080b11] relative overflow-hidden">
    <!-- Decorative elements -->
    <div
        class="absolute top-0 right-0 w-1/3 h-full bg-[#005EB8]/5 skew-x-12 transform origin-top pointer-events-none"
    >
    </div>

    <Container className="relative z-10">
        <div class="grid lg:grid-cols-2 gap-20 items-center">
            <div>
                <h2
                    class="text-xs font-mono text-[#005EB8] dark:text-blue-400 uppercase tracking-[0.3em] mb-4"
                >
                    Metodología
                </h2>
                <h3
                    class="text-4xl font-bold text-[#211915] dark:text-white mb-8"
                >
                    Cómo construimos su futuro digital
                </h3>
                <p class="text-lg text-gray-600 dark:text-gray-400 mb-10">
                    Nuestra metodología combina las mejores prácticas de
                    ingeniería de software con un profundo conocimiento del
                    entorno industrial, asegurando soluciones robustas, seguras
                    y fáciles de usar.
                </p>

                <div class="space-y-4">
                    <div
                        class="flex items-center gap-4 p-4 rounded-2xl bg-white dark:bg-gray-900 border border-gray-100 dark:border-gray-800 shadow-sm"
                    >
                        <div
                            class="w-10 h-10 rounded-full bg-green-500/10 flex items-center justify-center text-green-500"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="20"
                                height="20"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2.5"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><polyline points="20 6 9 17 4 12"
                                ></polyline></svg
                            >
                        </div>
                        <span
                            class="font-semibold text-[#211915] dark:text-white"
                            >Seguridad de Datos de Grado Industrial</span
                        >
                    </div>
                    <div
                        class="flex items-center gap-4 p-4 rounded-2xl bg-white dark:bg-gray-900 border border-gray-100 dark:border-gray-800 shadow-sm"
                    >
                        <div
                            class="w-10 h-10 rounded-full bg-blue-500/10 flex items-center justify-center text-blue-500"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="20"
                                height="20"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2.5"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><polyline points="20 6 9 17 4 12"
                                ></polyline></svg
                            >
                        </div>
                        <span
                            class="font-semibold text-[#211915] dark:text-white"
                            >Arquitecturas Escalables en la Nube o Local</span
                        >
                    </div>
                </div>
            </div>

            <div class="grid gap-6">
                {
                    steps.map((step, index) => (
                        <div
                            class="relative p-6 rounded-2xl bg-white dark:bg-gray-900 border border-gray-100 dark:border-gray-800 shadow-sm hover:shadow-md transition-shadow group overflow-hidden"
                            data-animate="fade-up"
                            data-animate-delay={`${index * 0.1}s`}
                        >
                            <div class="absolute -right-4 -top-8 text-8xl font-bold text-gray-50 dark:text-gray-800/50 group-hover:text-blue-50 dark:group-hover:text-blue-900/20 transition-colors pointer-events-none italic">
                                {step.number}
                            </div>
                            <div class="relative z-10">
                                <h4 class="text-xl font-bold text-[#211915] dark:text-white mb-2">
                                    {step.title}
                                </h4>
                                <p class="text-gray-600 dark:text-gray-400">
                                    {step.description}
                                </p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </Container>
</section>
