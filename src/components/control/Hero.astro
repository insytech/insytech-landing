---
import Container from "../shared/Container.astro";
---

<section
    class="relative min-h-screen flex items-center overflow-hidden bg-gradient-to-br from-gray-50 via-white to-gray-100 dark:from-gray-950 dark:via-gray-900 dark:to-gray-950"
>
    <!-- Animated grid pattern -->
    <div class="absolute inset-0 opacity-30 dark:opacity-20">
        <div
            class="absolute inset-0"
            style="background-image: linear-gradient(rgba(0, 94, 184, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 94, 184, 0.1) 1px, transparent 1px); background-size: 60px 60px;"
        >
        </div>
    </div>

    <!-- Floating industrial elements -->
    <div class="absolute inset-0 overflow-hidden">
        <!-- Glowing orbs -->
        <div
            class="absolute top-1/4 right-1/4 w-96 h-96 bg-[#00B5E2]/5 rounded-full blur-3xl animate-pulse"
        >
        </div>
        <div
            class="absolute bottom-1/3 left-1/4 w-72 h-72 bg-[#005EB8]/5 rounded-full blur-3xl animate-pulse"
            style="animation-delay: 1s;"
        >
        </div>

        <!-- Circuit lines -->
        <svg
            class="absolute top-0 right-0 w-1/2 h-full opacity-10 dark:opacity-20"
            viewBox="0 0 400 800"
        >
            <path
                d="M 50 0 L 50 200 L 150 200 L 150 400 L 250 400 L 250 600 L 350 600 L 350 800"
                stroke="url(#circuitGradient)"
                stroke-width="2"
                fill="none"
                class="circuit-path"></path>
            <path
                d="M 150 0 L 150 100 L 250 100 L 250 300 L 350 300 L 350 500"
                stroke="url(#circuitGradient)"
                stroke-width="2"
                fill="none"
                class="circuit-path"
                style="animation-delay: 0.5s;"></path>
            <path
                d="M 300 0 L 300 150 L 200 150 L 200 350 L 100 350 L 100 550 L 50 550"
                stroke="url(#circuitGradient)"
                stroke-width="2"
                fill="none"
                class="circuit-path"
                style="animation-delay: 1s;"></path>
            <!-- Nodes -->
            <circle cx="150" cy="200" r="4" fill="#00B5E2"></circle>
            <circle cx="250" cy="400" r="4" fill="#00B5E2"></circle>
            <circle cx="250" cy="100" r="4" fill="#00B5E2"></circle>
            <circle cx="200" cy="350" r="4" fill="#00B5E2"></circle>
            <defs>
                <linearGradient
                    id="circuitGradient"
                    x1="0%"
                    y1="0%"
                    x2="0%"
                    y2="100%"
                >
                    <stop offset="0%" stop-color="#005EB8"></stop>
                    <stop offset="50%" stop-color="#00B5E2"></stop>
                    <stop offset="100%" stop-color="#005EB8"></stop>
                </linearGradient>
            </defs>
        </svg>
    </div>

    <Container className="relative z-10">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
            <!-- Content -->
            <div class="py-20 lg:py-32">
                <!-- Badge -->
                <div
                    class="inline-flex items-center gap-3 px-4 py-2 rounded-full bg-[#005EB8]/10 dark:bg-[#00B5E2]/10 border border-[#005EB8]/20 dark:border-[#00B5E2]/20 mb-8"
                    data-animate="fade-up"
                >
                    <span class="relative flex h-2 w-2">
                        <span
                            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-[#00B5E2] opacity-75"
                        ></span>
                        <span
                            class="relative inline-flex rounded-full h-2 w-2 bg-[#00B5E2]"
                        ></span>
                    </span>
                    <span
                        class="text-sm font-medium text-[#005EB8] dark:text-[#00B5E2] uppercase tracking-wider"
                    >
                        Automatización Industrial
                    </span>
                </div>

                <!-- Title -->
                <h1
                    class="text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight mb-6"
                    data-animate="fade-up"
                    data-animate-delay=".1s"
                >
                    <span class="block text-[#211915] dark:text-white"
                        >Transforma tu</span
                    >
                    <span
                        class="block text-transparent bg-clip-text bg-gradient-to-r from-[#001489] via-[#005EB8] to-[#00B5E2] dark:from-[#4da6ff] dark:via-[#00B5E2] dark:to-[#6de0ff]"
                    >
                        línea de producción
                    </span>
                </h1>

                <!-- Description -->
                <p
                    class="text-lg text-gray-600 dark:text-gray-400 max-w-xl mb-10 leading-relaxed"
                    data-animate="fade-up"
                    data-animate-delay=".2s"
                >
                    Soluciones de PLC, SCADA e IoT industrial diseñadas para
                    maximizar tu eficiencia operativa y reducir tiempos muertos.
                </p>

                <!-- CTAs -->
                <div
                    class="flex flex-wrap gap-4 mb-12"
                    data-animate="fade-up"
                    data-animate-delay=".3s"
                >
                    <a
                        href="#contact"
                        class="inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-[#005EB8] to-[#00B5E2] text-white font-semibold rounded-full hover:shadow-lg hover:shadow-[#005EB8]/25 transition-all group"
                    >
                        <span>Solicitar cotización</span>
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="2"
                            stroke="currentColor"
                            class="w-5 h-5 group-hover:translate-x-1 transition-transform"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25"
                            ></path>
                        </svg>
                    </a>
                    <a
                        href="#services"
                        class="inline-flex items-center gap-3 px-8 py-4 border-2 border-gray-300 dark:border-gray-500 text-gray-900 dark:text-white font-semibold rounded-full hover:border-[#005EB8] dark:hover:border-[#00B5E2] hover:text-[#005EB8] dark:hover:text-[#00B5E2] hover:bg-[#005EB8]/5 dark:hover:bg-[#00B5E2]/10 transition-all"
                    >
                        Ver soluciones
                    </a>
                </div>

                <!-- Stats -->
                <div
                    class="flex flex-wrap gap-8"
                    data-animate="fade-up"
                    data-animate-delay=".4s"
                >
                    <div>
                        <div
                            class="text-3xl font-bold text-[#005EB8] dark:text-[#00B5E2]"
                        >
                            150+
                        </div>
                        <div
                            class="text-sm text-gray-500 dark:text-gray-400 uppercase tracking-wider"
                        >
                            Proyectos
                        </div>
                    </div>
                    <div class="w-px bg-gray-200 dark:bg-gray-700"></div>
                    <div>
                        <div
                            class="text-3xl font-bold text-[#005EB8] dark:text-[#00B5E2]"
                        >
                            99.8%
                        </div>
                        <div
                            class="text-sm text-gray-500 dark:text-gray-400 uppercase tracking-wider"
                        >
                            Uptime
                        </div>
                    </div>
                    <div class="w-px bg-gray-200 dark:bg-gray-700"></div>
                    <div>
                        <div
                            class="text-3xl font-bold text-[#005EB8] dark:text-[#00B5E2]"
                        >
                            24/7
                        </div>
                        <div
                            class="text-sm text-gray-500 dark:text-gray-400 uppercase tracking-wider"
                        >
                            Soporte
                        </div>
                    </div>
                </div>
            </div>

            <!-- Visual element - PLC/Automation/SCADA illustration -->
            <div class="relative hidden lg:block" data-animate="slide-left">
                <div class="relative">
                    <!-- Main PLC Code Card -->
                    <div
                        class="relative text-gray-900 dark:text-gray-100 bg-gray-100 dark:bg-gray-800 rounded-2xl shadow-2xl shadow-gray-900/30 dark:shadow-black/50 p-6 border border-gray-300 dark:border-gray-600 font-mono text-sm"
                    >
                        <!-- Header -->
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center gap-2">
                                <div class="w-3 h-3 rounded-full bg-red-500">
                                </div>
                                <div class="w-3 h-3 rounded-full bg-yellow-500">
                                </div>
                                <div class="w-3 h-3 rounded-full bg-green-500">
                                </div>
                            </div>
                            <div class="text-gray-400 text-xs">PLC_Main.st</div>
                        </div>

                        <!-- Code -->
                        <div class="space-y-1 text-xs">
                            <div>
                                <span class="text-purple-400">PROGRAM</span>
                                <span class="text-cyan-400">Main_Control</span>
                            </div>
                            <div class="text-gray-500">
                                // Robot arm sequence
                            </div>
                            <div><span class="text-purple-400">VAR</span></div>
                            <div class="pl-4">
                                <span class="text-cyan-400">robotState</span>: <span
                                    class="text-yellow-400">INT</span
                                > := <span class="text-green-400">0</span>;
                            </div>
                            <div class="pl-4">
                                <span class="text-cyan-400">sensorReady</span>: <span
                                    class="text-yellow-400">BOOL</span
                                >;
                            </div>
                            <div class="pl-4">
                                <span class="text-cyan-400">motorSpeed</span>: <span
                                    class="text-yellow-400">REAL</span
                                > := <span class="text-green-400">1500.0</span>;
                            </div>
                            <div>
                                <span class="text-purple-400">END_VAR</span>
                            </div>
                            <div class="mt-2"></div>
                            <div>
                                <span class="text-purple-400">IF</span>
                                <span class="text-cyan-400">sensorReady</span>
                                <span class="text-purple-400">THEN</span>
                            </div>
                            <div class="pl-4">
                                <span class="text-cyan-400">robotState</span> := <span
                                    class="text-green-400">1</span
                                >;
                            </div>
                            <div class="pl-4">
                                <span class="text-orange-400"
                                    >MoveToPosition</span
                                >(<span class="text-green-400">X:=100</span>, <span
                                    class="text-green-400">Y:=250</span
                                >);
                            </div>
                            <div>
                                <span class="text-purple-400">END_IF</span>;
                            </div>
                        </div>
                    </div>

                    <!-- SCADA Panel floating card -->
                    <div
                        class="absolute -top-6 -right-6 bg-white dark:bg-gray-800 rounded-xl shadow-xl p-4 border border-gray-100 dark:border-gray-700 w-48"
                    >
                        <div class="flex items-center gap-2 mb-3">
                            <div
                                class="w-8 h-8 rounded-lg bg-gradient-to-br from-[#005EB8] to-[#00B5E2] flex items-center justify-center"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="2"
                                    stroke="currentColor"
                                    class="w-4 h-4 text-white"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M9 17.25v1.007a3 3 0 01-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0115 18.257V17.25m6-12V15a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 15V5.25m18 0A2.25 2.25 0 0018.75 3H5.25A2.25 2.25 0 003 5.25m18 0V12a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 12V5.25"
                                    ></path>
                                </svg>
                            </div>
                            <span
                                class="text-sm font-semibold text-gray-900 dark:text-white"
                                >SCADA</span
                            >
                        </div>
                        <div class="space-y-2">
                            <div class="flex items-center justify-between">
                                <span class="text-xs text-gray-500"
                                    >Motor 1</span
                                >
                                <span
                                    class="w-2 h-2 rounded-full bg-green-400 animate-pulse"
                                ></span>
                            </div>
                            <div class="flex items-center justify-between">
                                <span class="text-xs text-gray-500"
                                    >Motor 2</span
                                >
                                <span
                                    class="w-2 h-2 rounded-full bg-green-400 animate-pulse"
                                ></span>
                            </div>
                            <div class="flex items-center justify-between">
                                <span class="text-xs text-gray-500"
                                    >Conveyor</span
                                >
                                <span
                                    class="w-2 h-2 rounded-full bg-yellow-400 animate-pulse"
                                ></span>
                            </div>
                        </div>
                    </div>

                    <!-- Sensors floating card -->
                    <div
                        class="absolute -bottom-4 -left-6 bg-white dark:bg-gray-800 rounded-xl shadow-xl p-4 border border-gray-100 dark:border-gray-700"
                    >
                        <div class="flex items-center gap-3">
                            <div
                                class="w-10 h-10 rounded-lg bg-[#00B5E2]/10 flex items-center justify-center"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="2"
                                    stroke="currentColor"
                                    class="w-5 h-5 text-[#00B5E2]"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M8.288 15.038a5.25 5.25 0 017.424 0M5.106 11.856c3.807-3.808 9.98-3.808 13.788 0M1.924 8.674c5.565-5.565 14.587-5.565 20.152 0M12.53 18.22l-.53.53-.53-.53a.75.75 0 011.06 0z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <div
                                    class="text-sm font-semibold text-gray-900 dark:text-white"
                                >
                                    12 Sensores
                                </div>
                                <div class="text-xs text-gray-500">
                                    Conectados vía OPC-UA
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Robot arm floating badge -->
                    <div
                        class="absolute top-1/2 -right-12 transform translate-x-1/2 bg-white dark:bg-gray-800 rounded-full shadow-lg p-3 border border-gray-100 dark:border-gray-700"
                    >
                        <div
                            class="w-8 h-8 rounded-full bg-gradient-to-br from-orange-400 to-orange-600 flex items-center justify-center"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="2"
                                stroke="currentColor"
                                class="w-4 h-4 text-white"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437l1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008z"
                                ></path>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Container>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2">
        <div
            class="w-6 h-10 rounded-full border-2 border-gray-300 dark:border-gray-600 flex items-start justify-center p-1"
        >
            <div
                class="w-1 h-2 bg-gray-400 dark:bg-gray-500 rounded-full animate-bounce"
            >
            </div>
        </div>
    </div>
</section>

<style>
    .circuit-path {
        stroke-dasharray: 1000;
        stroke-dashoffset: 1000;
        animation: drawCircuit 4s ease-in-out infinite;
    }

    @keyframes drawCircuit {
        0% {
            stroke-dashoffset: 1000;
        }
        50% {
            stroke-dashoffset: 0;
        }
        100% {
            stroke-dashoffset: -1000;
        }
    }
</style>
