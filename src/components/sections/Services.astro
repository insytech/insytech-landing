---
import Service from "../cards/Service.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";
import { services } from "@utils/data.ts";

type ServicesProps = {
    title: string;
    description: string;
    icon: string;
};
---

<section id="services">
    <Container className="space-y-10 md:space-y-12">
        <div class="text-center max-w-3xl mx-auto space-y-4">
            <Title> Servicios Especializados en Ingenier√≠a </Title>
            <Paragraph>
                Descubre nuestras soluciones avanzadas para optimizar procesos
                industriales y mejorar la eficiencia.
            </Paragraph>
        </div>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
            {
                services.map((service: ServicesProps) => {
                    return (
                        <Service
                            title={service.title}
                            description={service.description}
                            icon={service.icon}
                        />
                    );
                })
            }
        </div>
    </Container>
</section>
