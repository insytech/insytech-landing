---
import Paragraph from "../shared/Paragraph.astro";

export interface Props {
    title: string;
    description: string;
    icon: string;
    image: string;
    features: string[];
    imageSecondary?: string;
}

const { title, description, icon, image, imageSecondary, features } =
    Astro.props;
const imgPrimary = image;
const imgSecondary = imageSecondary ?? image;
---

<div
    class="p-5 sm:p-6 lg:p-8 rounded-3xl border border-box-border shadow-lg light:bg-box-bg dark:bg-gray-900/20 shadow-box-shadow relative overflow-hidden h-full flex flex-col"
>
    <!-- Imagen con superposición (collage 2 imágenes) -->
    <div class="rounded-xl">
        <div class="relative w-full overflow-visible">
            <div
                class="relative lg:min-h-[350px] md:min-h-[220px] w-full aspect-[16/10] sm:aspect-[7/4] md:aspect-[16/9]"
            >
                <!-- Imagen principal (arriba-izquierda) -->
                <div
                    class="absolute top-0 left-2 sm:left-4 md:left-6 w-[88%] sm:w-[82%] lg:w-[78%] aspect-[4/3] rounded-3xl overflow-hidden shadow-xl"
                >
                    <img
                        src={imgPrimary}
                        alt={`${title} - imagen principal`}
                        class="w-full h-full object-cover"
                    />
                </div>

                <!-- Imagen secundaria (ligeramente más abajo en ambos escenarios) -->
                <div
                    class="absolute bottom-0 right-2 sm:right-4 md:right-6 translate-y-2 sm:translate-y-4 md:translate-y-5 w-[54%] sm:w-[48%] lg:w-[44%] aspect-[4/3] rounded-3xl overflow-hidden shadow-2xl ring-[6px] sm:ring-8 ring-white dark:ring-[#050b16] bg-white/40 dark:bg-gray-900/40 z-10"
                >
                    <img
                        src={imgSecondary}
                        alt={`${title} - imagen secundaria`}
                        class="w-full h-full object-cover"
                    />
                </div>
            </div>
        </div>
    </div>

    <!-- Contenido de la tarjeta -->
    <div class="mt-10 space-y-4 relative flex-grow">
        <h2 class="text-lg md:text-xl font-semibold text-heading-2">
            {title}
        </h2>
        <Paragraph>
            {description}
        </Paragraph>

        <!-- Lista de características -->
        {
            features && features.length > 0 && (
                <ul class="mt-4 space-y-2">
                    {features.map((feature) => (
                        <li class="flex items-center gap-2">
                            <span class="text-[#005EB8]">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="2"
                                    stroke="currentColor"
                                    class="w-4 h-4"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M4.5 12.75l6 6 9-13.5"
                                    />
                                </svg>
                            </span>
                            <span class="text-sm text-gray-700 dark:text-gray-300">
                                {feature}
                            </span>
                        </li>
                    ))}
                </ul>
            )
        }
    </div>

    <!-- Elemento decorativo -->
    <span
        class="absolute w-32 aspect-square -bottom-16 -right-16 bg-primary/10 rounded-full"
    ></span>
</div>
