---
import Container from "../shared/Container.astro";
import MagicBento from "../react-bits/MagicBento";
import { bentoData } from "./BentoData";
---

<section
    id="services"
    class="py-24 relative overflow-hidden bg-white dark:bg-gray-950"
>
    <!-- Background Accents -->
    <div
        class="absolute top-0 right-0 w-full h-full pointer-events-none opacity-20 dark:opacity-40 overflow-hidden"
    >
        <div
            class="absolute -top-[10%] -right-[10%] w-[40%] h-[40%] bg-[#00B5E2]/10 rounded-full blur-[120px]"
        >
        </div>
    </div>

    <Container className="relative z-10">
        <div class="max-w-3xl mb-16" data-animate="fade-up">
            <h2
                class="text-3xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6"
            >
                Servicios y <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-[#001489] to-[#00B5E2]"
                    >Capacidades</span
                >
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-400">
                Soluciones integrales de visión artificial diseñadas para la
                industria moderna, combinando potencia de IA con ejecución
                eficiente en el borde.
            </p>
        </div>

        <MagicBento
            cardData={bentoData}
            enableSpotlight={true}
            enableStars={false}
            enableBorderGlow={true}
            enableMagnetism={true}
            enableTilt={false}
            clickEffect={true}
            spotlightRadius={480}
            glowColor="0, 181, 226"
            client:only="react"
        />
    </Container>
</section>
