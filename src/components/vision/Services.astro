---
import Container from "../shared/Container.astro";

const capabilities = [
    {
        number: "01",
        title: "Detección de Defectos",
        description: "Identificación automática de imperfecciones con precisión superior al 99%. Desde micro-fisuras hasta errores de ensamble.",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z"/><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/></svg>`
    },
    {
        number: "02",
        title: "Lectura OCR Industrial",
        description: "Reconocimiento de códigos, etiquetas y caracteres en cualquier superficie. Integración directa con sistemas de trazabilidad.",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 4.875c0-.621.504-1.125 1.125-1.125h4.5c.621 0 1.125.504 1.125 1.125v4.5c0 .621-.504 1.125-1.125 1.125h-4.5A1.125 1.125 0 013.75 9.375v-4.5zM3.75 14.625c0-.621.504-1.125 1.125-1.125h4.5c.621 0 1.125.504 1.125 1.125v4.5c0 .621-.504 1.125-1.125 1.125h-4.5a1.125 1.125 0 01-1.125-1.125v-4.5zM13.5 4.875c0-.621.504-1.125 1.125-1.125h4.5c.621 0 1.125.504 1.125 1.125v4.5c0 .621-.504 1.125-1.125 1.125h-4.5A1.125 1.125 0 0113.5 9.375v-4.5z"/><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 6.75h.75v.75h-.75v-.75zM6.75 16.5h.75v.75h-.75v-.75zM16.5 6.75h.75v.75h-.75v-.75zM13.5 13.5h.75v.75h-.75v-.75zM13.5 19.5h.75v.75h-.75v-.75zM19.5 13.5h.75v.75h-.75v-.75zM19.5 19.5h.75v.75h-.75v-.75zM16.5 16.5h.75v.75h-.75v-.75z"/></svg>`
    },
    {
        number: "03",
        title: "Integración PLC/SCADA",
        description: "Comunicación nativa con sistemas de control. Acciones automáticas en tiempo real: rechazos, alertas y registros.",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M8.288 15.038a5.25 5.25 0 017.424 0M5.106 11.856c3.807-3.808 9.98-3.808 13.788 0M1.924 8.674c5.565-5.565 14.587-5.565 20.152 0M12.53 18.22l-.53.53-.53-.53a.75.75 0 011.06 0z"/></svg>`
    }
];
---

<section id="services" class="relative py-20 overflow-hidden bg-white dark:bg-gray-950">
    <!-- Línea decorativa vertical -->
    <div class="absolute left-1/2 top-0 bottom-0 w-px bg-gradient-to-b from-transparent via-[#005EB8]/20 to-transparent hidden lg:block"></div>

    <Container className="relative z-10">
        <div class="grid lg:grid-cols-3 gap-8 lg:gap-12">
            {capabilities.map((cap, index) => (
                <div 
                    class="group relative h-full"
                    data-animate="fade-up"
                    data-animate-delay={`${0.1 * index}s`}
                >
                    <!-- Card con efecto hover -->
                    <div class="relative p-8 rounded-2xl bg-gray-50 dark:bg-gray-900/50 border border-gray-100 dark:border-gray-800 hover:border-[#005EB8]/30 dark:hover:border-[#005EB8]/50 transition-all duration-500 group-hover:-translate-y-2 h-full flex flex-col">
                        <!-- Número grande de fondo -->
                        <div class="absolute top-4 right-4 text-6xl font-bold text-gray-200 dark:text-gray-800/50 font-['FieldworkGeo'] select-none">
                            {cap.number}
                        </div>
                        
                        <!-- Icono -->
                        <div class="relative w-14 h-14 rounded-xl bg-gradient-to-br from-[#001489] to-[#005EB8] flex items-center justify-center text-white mb-6 group-hover:scale-110 transition-transform duration-300 flex-shrink-0">
                            <Fragment set:html={cap.icon} />
                        </div>
                        
                        <!-- Contenido -->
                        <h3 class="relative text-xl font-semibold text-[#211915] dark:text-white mb-3">
                            {cap.title}
                        </h3>
                        
                        <p class="relative text-gray-700 dark:text-gray-300 leading-relaxed flex-grow">
                            {cap.description}
                        </p>

                        <!-- Línea inferior animada -->
                        <div class="absolute bottom-0 left-8 right-8 h-0.5 bg-gradient-to-r from-[#001489] via-[#005EB8] to-[#00B5E2] scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>
                    </div>
                </div>
            ))}
        </div>
    </Container>
</section>
