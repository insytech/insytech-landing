---
import Badge from "@components/shared/Badge.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";
import { visionServices } from "@utils/vision-data.ts";
---

<section id="services" class="relative py-20 overflow-hidden">
    <!-- Elementos decorativos de fondo -->
    <div class="absolute inset-0 z-0">
        <div
            class="absolute top-0 left-0 w-1/3 h-1/3 bg-gradient-to-br from-[#001489]/5 to-transparent rounded-br-full"
        >
        </div>
        <div
            class="absolute bottom-0 right-0 w-1/2 h-1/2 bg-gradient-to-tl from-[#00B5E2]/5 to-transparent rounded-tl-full"
        >
        </div>
        <div
            class="absolute w-full h-full bg-[linear-gradient(45deg,transparent_25%,rgba(68,68,68,.02)_25%,rgba(68,68,68,.02)_50%,transparent_50%,transparent_75%,rgba(68,68,68,.02)_75%)] bg-[length:20px_20px] opacity-20"
        >
        </div>
    </div>

    <Container className="relative z-10">
        <!-- Encabezado de la sección -->
        <div
            class="text-center max-w-3xl mx-auto space-y-4 mb-16"
            data-animate="fade-up"
        >
            <div class="flex justify-center mb-4">
                <Badge text="Capacidades" />
            </div>

            <Title>Tecnología de visión de última generación</Title>

            <Paragraph data-animate="fade" data-animate-delay=".08s">
                Nuestros sistemas combinan hardware industrial con algoritmos de 
                inteligencia artificial para resolver los retos de inspección más exigentes.
            </Paragraph>
        </div>

        <!-- Grid de servicios -->
        <div class="grid md:grid-cols-3 gap-8">
            {visionServices.map((service, i) => (
                <div
                    class="group relative p-8 rounded-2xl bg-white/70 dark:bg-gray-900/50 backdrop-blur-sm border border-gray-200/50 dark:border-gray-700/50 shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden"
                    data-animate="fade-up"
                    data-animate-delay={`${0.08 * i}s`}
                >
                    <!-- Efecto de gradiente en hover -->
                    <div class="absolute inset-0 bg-gradient-to-br from-[#005EB8]/0 to-[#00B5E2]/0 group-hover:from-[#005EB8]/5 group-hover:to-[#00B5E2]/5 transition-all duration-300"></div>
                    
                    <div class="relative z-10">
                        <!-- Icono -->
                        <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-[#005EB8]/10 to-[#00B5E2]/10 dark:from-[#005EB8]/20 dark:to-[#00B5E2]/20 flex items-center justify-center text-[#005EB8] dark:text-[#71b5f5] mb-6 group-hover:scale-110 transition-transform duration-300">
                            <Fragment set:html={service.icon} />
                        </div>
                        
                        <!-- Título -->
                        <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-3">
                            {service.title}
                        </h3>
                        
                        <!-- Descripción -->
                        <p class="text-gray-600 dark:text-gray-400 mb-6 leading-relaxed">
                            {service.description}
                        </p>
                        
                        <!-- Features -->
                        <ul class="space-y-2">
                            {service.features.map((feature) => (
                                <li class="flex items-start gap-2 text-sm text-gray-700 dark:text-gray-300">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 text-[#00B5E2] flex-shrink-0 mt-0.5">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                                    </svg>
                                    <span>{feature}</span>
                                </li>
                            ))}
                        </ul>
                    </div>
                </div>
            ))}
        </div>
    </Container>
</section>
