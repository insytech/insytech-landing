---
import Container from "../shared/Container.astro";
import { visionServices } from "@utils/vision-data.ts";
---

<section id="services" class="relative py-20 overflow-hidden bg-gray-50 dark:bg-gray-900">
    <!-- Patrón de fondo industrial -->
    <div class="absolute inset-0 z-0">
        <div class="absolute w-full h-full bg-[radial-gradient(circle_at_1px_1px,rgba(0,94,184,0.08)_1px,transparent_0)] bg-[length:32px_32px] dark:opacity-40"></div>
    </div>

    <Container className="relative z-10">
        <!-- Encabezado minimalista -->
        <div class="max-w-3xl mx-auto text-center mb-16" data-animate="fade-up">
            <!-- Badge -->
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-[#005EB8]/30 bg-[#005EB8]/5 dark:bg-[#005EB8]/10 mb-6">
                <div class="w-2 h-2 rounded-full bg-[#00B5E2] animate-pulse"></div>
                <span class="text-sm font-medium text-[#005EB8] dark:text-[#4da6ff] uppercase tracking-wider">
                    Capacidades
                </span>
            </div>

            <h2 class="text-3xl sm:text-4xl lg:text-5xl font-semibold font-['FieldworkGeo'] text-[#211915] dark:text-white leading-tight mb-4">
                Tecnología de visión de
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#001489] via-[#005EB8] to-[#00B5E2] dark:from-[#4da6ff] dark:via-[#00B5E2] dark:to-[#6de0ff]">
                    última generación
                </span>
            </h2>

            <p class="text-gray-600 dark:text-gray-400 text-lg leading-relaxed">
                Nuestros sistemas combinan hardware industrial con algoritmos de inteligencia artificial para resolver los retos de inspección más exigentes.
            </p>
        </div>

        <!-- Grid de servicios -->
        <div class="grid md:grid-cols-3 gap-8">
            {visionServices.map((service, i) => (
                <div
                    class="group relative p-8 rounded-2xl bg-white dark:bg-gray-800/50 border border-gray-200/50 dark:border-gray-700/30 hover:border-[#005EB8]/30 dark:hover:border-[#005EB8]/50 transition-all duration-300"
                    data-animate="fade-up"
                    data-animate-delay={`${0.08 * i}s`}
                >
                    <!-- Línea decorativa superior -->
                    <div class="absolute top-0 left-8 right-8 h-px bg-gradient-to-r from-transparent via-[#005EB8]/30 to-transparent group-hover:via-[#005EB8] transition-all duration-300"></div>
                    
                    <!-- Icono -->
                    <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-[#005EB8]/10 to-[#00B5E2]/5 dark:from-[#005EB8]/20 dark:to-[#00B5E2]/10 flex items-center justify-center text-[#005EB8] dark:text-[#4da6ff] mb-6 group-hover:scale-105 transition-transform duration-300">
                        <Fragment set:html={service.icon} />
                    </div>
                    
                    <!-- Título -->
                    <h3 class="text-xl font-semibold text-[#211915] dark:text-white mb-3">
                        {service.title}
                    </h3>
                    
                    <!-- Descripción -->
                    <p class="text-gray-600 dark:text-gray-400 mb-6 leading-relaxed">
                        {service.description}
                    </p>
                    
                    <!-- Features con estilo minimalista -->
                    <ul class="space-y-3">
                        {service.features.map((feature) => (
                            <li class="flex items-start gap-3 text-sm text-gray-700 dark:text-gray-300">
                                <div class="w-1.5 h-1.5 rounded-full bg-[#00B5E2] mt-1.5 flex-shrink-0"></div>
                                <span>{feature}</span>
                            </li>
                        ))}
                    </ul>
                </div>
            ))}
        </div>
    </Container>
</section>
