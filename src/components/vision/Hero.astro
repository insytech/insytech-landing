---
import BtnLink from "../shared/BtnLink.astro";
import Container from "../shared/Container.astro";
import Badge from "../shared/Badge.astro";
import BadgeImage from "@components/shared/BadgeImage.astro";
---

<section
    class="relative overflow-hidden rounded-b-[length:60px] pt-28 lg:pt-32 pb-16 bg-gradient-to-br from-gray-100 via-[#eaf3fc] to-[#dce7f5] dark:from-gray-900 dark:via-[#1a1f29] dark:to-[#12151c]"
>
    <!-- Efecto de grid tecnológico en el fondo -->
    <div class="absolute inset-0 z-10 opacity-10">
        <div
            class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] bg-center"
        >
        </div>
    </div>

    <!-- Gradientes de fondo mejorados -->
    <div class="absolute inset-0 z-0">
        <div
            class="absolute top-0 left-0 w-1/3 h-1/3 bg-gradient-to-br from-[#005EB8]/30 to-transparent rounded-full blur-3xl"
        >
        </div>
        <div
            class="absolute top-1/4 right-1/4 w-1/4 h-1/4 bg-gradient-to-br from-[#00B5E2]/20 to-transparent rounded-full blur-3xl"
        >
        </div>
        <div
            class="absolute bottom-0 right-0 w-1/2 h-1/2 bg-gradient-to-tl from-[#001489]/20 to-transparent rounded-full blur-3xl"
        >
        </div>
    </div>

    <!-- Overlay de imagen técnica con baja opacidad -->
    <div class="absolute inset-0 opacity-10 z-0">
        <img
            src="/images/vision1.webp"
            alt="Soluciones tecnológicas Insytech Vision"
            class="w-full h-full object-cover"
            loading="lazy"
        />
        <div
            class="absolute inset-0 bg-gradient-to-tr from-[#001489]/40 via-transparent to-transparent"
        >
        </div>
    </div>

    <Container className="relative z-10">
        <!-- Layout mejorado -->
        <div class="grid lg:grid-cols-5 gap-8 lg:gap-16 items-center">
            <!-- Contenido - ocupa 3 columnas -->
            <div class="lg:col-span-3">
                <!-- Badge y Encabezado -->
                <div class="text-center lg:text-left mb-8">
                    <div class="flex justify-left mb-4">
                        <Badge text="Tecnología avanzada para la industria" />
                    </div>
                    <h1
                        class="mt-6 text-4xl sm:text-5xl lg:text-6xl font-extrabold text-gray-800 dark:text-white leading-tight"
                    >
                        <span class="inline-block">Insytech</span>
                        <span
                            class="inline-block text-transparent bg-clip-text bg-gradient-to-r from-[#005EB8] to-[#00B5E2]"
                        >
                            Vision
                        </span>
                        <span class="block mt-2">
                            Detección precisa con Machine Learning
                        </span>
                    </h1>
                    <p
                        class="mt-4 text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto lg:mx-0"
                    >
                        Transformamos procesos industriales con soluciones de
                        visión computacional y aprendizaje automático,
                        optimizando la producción y garantizando precisión.
                    </p>

                    <!-- CTA más visible -->
                    <div
                        class="mt-8 flex flex-wrap gap-4 justify-center lg:justify-start"
                    >
                        <BtnLink
                            text="Solicita una demostración"
                            href="#contact"
                            className="py-4 px-8 text-white font-medium flex items-center gap-3"
                            variant="primary"
                        />
                    </div>
                </div>
            </div>

            <!-- Imagen destacada - ocupa 2 columnas con efecto flotante -->
            <div class="lg:col-span-2 relative">
                <!-- Badge de profesionales capacitados - reposicionado y estilizado -->
                <div class="absolute -top-5 -left-3 z-20">
                    <BadgeImage
                        title="Equipo optimizado"
                        subtitle="Visión computacional y aprendizaje automático"
                        svg="<svg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width='1.5' stroke='currentColor' class='w-5 h-5'><path stroke-linecap='round' stroke-linejoin='round' d='M9 12.75L11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 01-1.043 3.296 3.745 3.745 0 01-3.296 1.043A3.745 3.745 0 0112 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 01-3.296-1.043 3.745 3.745 0 01-1.043-3.296A3.745 3.745 0 013 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 011.043-3.296 3.746 3.746 0 013.296-1.043A3.746 3.746 0 0112 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 013.296 1.043 3.746 3.746 0 011.043 3.296A3.745 3.745 0 0121 12z'></path></svg>"
                    />
                </div>

                <!-- Imagen principal con efectos avanzados -->
                <div class="relative group mt-3 mx-auto max-w-lg">
                    <!-- Halo de energía exterior -->
                    <div
                        class="absolute -inset-3 bg-gradient-to-r from-[#005EB8]/20 to-[#00B5E2]/20 rounded-3xl blur-xl opacity-70 group-hover:opacity-100 transition-all duration-500 z-0"
                    >
                    </div>

                    <!-- Bordes con gradiente con efecto de "glow" -->
                    <div
                        class="absolute inset-0 rounded-2xl border-2 border-[#005EB8]/30 group-hover:border-[#005EB8]/60 transition-colors duration-500 z-10"
                    >
                    </div>

                    <!-- Efecto de brillo en hover -->
                    <div
                        class="absolute -inset-0.5 bg-gradient-to-r from-[#005EB8] to-[#00B5E2] rounded-2xl opacity-0 group-hover:opacity-30 blur-xl transition-opacity duration-500 z-0"
                    >
                    </div>

                    <!-- Contenedor principal de la imagen -->
                    <div
                        class="relative rounded-2xl overflow-hidden shadow-xl aspect-[16/9] transform group-hover:scale-[1.02] transition-all duration-500 z-10"
                    >
                        <!-- Imagen principal -->
                        <img
                            src="/images/vision2.webp"
                            alt="Detección de objetos con Insytech Vision"
                            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                            loading="lazy"
                        />

                        <!-- Overlay con gradiente sofisticado -->
                        <div
                            class="absolute inset-0 bg-gradient-to-t from-black/50 via-black/30 to-transparent"
                        >
                        </div>

                        <!-- Grid de interfaz tecnológica -->
                        <div
                            class="absolute inset-0 bg-[url('/images/tech-grid.svg')] bg-center opacity-30"
                        >
                        </div>

                        <!-- Elementos de detección de alta tecnología -->
                        <div class="absolute inset-0">
                            <!-- Marco de detección principal con efectos -->
                            <div
                                class="absolute w-32 h-20 border-2 border-[#00B5E2] rounded-md top-1/4 left-1/4 animate-pulse"
                            >
                                <!-- Esquinas de detección -->
                                <div
                                    class="absolute -top-1 -left-1 w-3 h-3 border-t-2 border-l-2 border-[#00B5E2]"
                                >
                                </div>
                                <div
                                    class="absolute -top-1 -right-1 w-3 h-3 border-t-2 border-r-2 border-[#00B5E2]"
                                >
                                </div>
                                <div
                                    class="absolute -bottom-1 -left-1 w-3 h-3 border-b-2 border-l-2 border-[#00B5E2]"
                                >
                                </div>
                                <div
                                    class="absolute -bottom-1 -right-1 w-3 h-3 border-b-2 border-r-2 border-[#00B5E2]"
                                >
                                </div>

                                <!-- Etiqueta de detección -->
                                <div
                                    class="absolute -top-7 left-0 bg-[#00B5E2]/80 text-white text-xs px-2 py-1 rounded-sm backdrop-blur-sm"
                                >
                                    Object_ID: 2845
                                </div>

                                <!-- Línea de datos -->
                                <div
                                    class="absolute -bottom-12 left-0 w-20 h-10"
                                >
                                    <div
                                        class="h-8 border-l-2 border-b-2 border-[#00B5E2]/60 w-full"
                                    >
                                    </div>
                                    <div
                                        class="absolute bottom-0 left-20 bg-[#00B5E2]/80 backdrop-blur-sm text-white text-xs px-2 py-0.5 rounded-sm whitespace-nowrap"
                                    >
                                        Conf: 98.7%
                                    </div>
                                </div>
                            </div>

                            <!-- Segundo elemento de detección más pequeño -->
                            <div
                                class="absolute w-20 h-14 border-2 border-[#005EB8]/90 rounded-md bottom-1/4 right-1/5 animate-pulse delay-300"
                            >
                                <div
                                    class="absolute -top-5 right-0 bg-[#005EB8]/80 backdrop-blur-sm text-white text-xs px-2 py-0.5 rounded-sm"
                                >
                                    ID: 2846
                                </div>
                            </div>

                            <!-- Puntos de análisis -->
                            <div
                                class="absolute w-3 h-3 bg-[#00B5E2] rounded-full top-1/2 left-1/3 animate-ping opacity-75"
                            >
                            </div>
                            <div
                                class="absolute w-2 h-2 bg-[#005EB8] rounded-full bottom-1/3 right-1/3 animate-ping delay-500 opacity-75"
                            >
                            </div>

                            <!-- Líneas de escaneo -->
                            <div class="absolute top-0 left-0 w-full h-full">
                                <div
                                    class="absolute top-0 left-0 w-full h-full border-t-2 border-[#00B5E2]/20 animate-scanline"
                                >
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Badge de estado mejorado - posicionamiento y diseño optimizado -->
                <div
                    class="absolute z-50 -bottom-10 right-2 max-w-[220px] bg-white/90 dark:bg-gray-800/90 backdrop-blur-md p-3 rounded-lg shadow-lg border border-gray-200/50 dark:border-gray-700/50 transform hover:-translate-y-1 transition-all duration-300"
                >
                    <div class="flex items-center gap-3 mb-1.5">
                        <!-- Indicador pulsante más sofisticado -->
                        <div class="relative h-3 w-3">
                            <div
                                class="absolute inset-0 rounded-full bg-green-500 animate-ping opacity-75"
                            >
                            </div>
                            <div
                                class="relative rounded-full h-2.5 w-2.5 bg-green-500"
                            >
                            </div>
                        </div>
                        <p
                            class="font-medium text-sm text-gray-800 dark:text-gray-200"
                        >
                            Solución en tiempo real
                        </p>
                    </div>
                    <p class="text-xs text-gray-600 dark:text-gray-400 pl-6">
                        Configuración y monitoreo desde la web
                    </p>
                </div>
            </div>
        </div>

        <!-- Características destacadas - en formato de tarjetas -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div
                class="bg-white/60 dark:bg-gray-800/60 backdrop-blur-md p-6 rounded-xl border border-gray-200/50 dark:border-gray-700/50 shadow-md hover:shadow-lg transition-shadow duration-300"
            >
                <h3
                    class="text-xl font-semibold text-gray-800 dark:text-white mb-2"
                >
                    Detección en tiempo real
                </h3>
                <p class="text-gray-700 dark:text-gray-300">
                    Identifica objetos con precisión milimétrica en entornos
                    industriales.
                </p>
            </div>

            <div
                class="bg-white/60 dark:bg-gray-800/60 backdrop-blur-md p-6 rounded-xl border border-gray-200/50 dark:border-gray-700/50 shadow-md hover:shadow-lg transition-shadow duration-300"
            >
                <h3
                    class="text-xl font-semibold text-gray-800 dark:text-white mb-2"
                >
                    Optimización de procesos
                </h3>
                <p class="text-gray-700 dark:text-gray-300">
                    Mejora la eficiencia y reduce errores en la producción.
                </p>
            </div>

            <div
                class="bg-white/60 dark:bg-gray-800/60 backdrop-blur-md p-6 rounded-xl border border-gray-200/50 dark:border-gray-700/50 shadow-md hover:shadow-lg transition-shadow duration-300"
            >
                <h3
                    class="text-xl font-semibold text-gray-800 dark:text-white mb-2"
                >
                    Escalabilidad
                </h3>
                <p class="text-gray-700 dark:text-gray-300">
                    Soluciones personalizadas para cualquier tamaño de
                    operación.
                </p>
            </div>
        </div>
    </Container>
</section>

<style>
    @keyframes scanline {
        0% {
            transform: translateY(-100%);
            opacity: 0;
        }
        50% {
            opacity: 0.5;
        }
        100% {
            transform: translateY(100%);
            opacity: 0;
        }
    }

    .animate-scanline {
        animation: scanline 4s linear infinite;
    }
</style>
