---
import Container from "../shared/Container.astro";
import Badge from "../shared/Badge.astro";
import ComparisonSlider from "../react-bits/ComparisonSlider";

const beforeMetrics = [
    { label: "Precisión", number: 85, prefix: "~", suffix: "%" },
    { label: "Tiempo", number: 5, prefix: "2-", suffix: "s" },
    { label: "Consistencia", value: "Variable" },
];

const afterMetrics = [
    { label: "Precisión", number: 99.7, suffix: "%" },
    { label: "Latencia", number: 50, prefix: "<", suffix: "ms" },
    { label: "Consistencia", number: 100, suffix: "%" },
];
---

<section
    id="comparison"
    class="relative py-24 overflow-hidden bg-white dark:bg-gray-950"
>
    <!-- Background Accents -->
    <div
        class="absolute top-0 left-0 w-full h-full pointer-events-none opacity-20 dark:opacity-40 overflow-hidden"
    >
        <div
            class="absolute -top-[20%] -left-[10%] w-[60%] h-[60%] bg-[#00B5E2]/20 rounded-full blur-[120px]"
        >
        </div>
        <div
            class="absolute -bottom-[20%] -right-[10%] w-[60%] h-[60%] bg-[#001489]/10 rounded-full blur-[120px]"
        >
        </div>
    </div>

    <Container className="relative z-10">
        <!-- Encabezado -->
        <div class="max-w-3xl mx-auto text-center mb-16" data-animate="fade-up">
            <div class="flex justify-center mb-6">
                <Badge text="Comparativa Industrial" />
            </div>

            <h2
                class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white leading-tight mb-4"
            >
                Inspección manual vs.
                <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-[#001489] via-[#005EB8] to-[#00B5E2] dark:from-[#4da6ff] dark:via-[#00B5E2] dark:to-[#6de0ff]"
                >
                    Insytech Vision
                </span>
            </h2>

            <p
                class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto"
            >
                Descubre cómo la automatización de inspección visual mediante IA
                optimiza tus procesos de calidad y reduce costos operativos.
            </p>
        </div>

        <div class="max-w-5xl mx-auto">
            <ComparisonSlider
                beforeImage="/images/vision-before.webp"
                afterImage="/images/vision-after.webp"
                beforeMetrics={beforeMetrics}
                afterMetrics={afterMetrics}
                client:visible
            />

            <p
                class="text-center text-sm text-gray-500 dark:text-gray-400 mt-6 animate-pulse"
            >
                Arrastra el control para comparar la capacidad de detección
            </p>
        </div>
    </Container>
</section>

<style>
    /* Estilos base si son necesarios */
</style>
