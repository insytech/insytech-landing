---
import Badge from "@components/shared/Badge.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";
import BadgeImage from "@components/shared/BadgeImage.astro";
---

<section id="features" class="relative py-20 overflow-hidden">
    <!-- Elementos decorativos de fondo -->
    <div class="absolute inset-0 z-0">
        <div
            class="absolute top-0 left-0 w-1/3 h-1/3 bg-gradient-to-br from-[#001489]/5 to-transparent rounded-br-full"
        >
        </div>
        <div
            class="absolute w-full h-full bg-[linear-gradient(45deg,transparent_25%,rgba(68,68,68,.02)_25%,rgba(68,68,68,.02)_50%,transparent_50%,transparent_75%,rgba(68,68,68,.02)_75%)] bg-[length:20px_20px] opacity-20"
        >
        </div>
    </div>

    <Container
        className="relative z-10 flex flex-col midmd:flex-row gap-10 lg:gap-12"
    >
        <!-- Columna de contenido -->
        <div
            class="flex flex-col w-full lg:w-1/2 space-y-8"
            data-animate="fade-up"
        >
            <!-- Badge de navegación -->
            <div class="flex justify-center lg:justify-start">
                <Badge text="Sectores Industriales" />
            </div>

            <!-- Título y descripción -->
            <div>
                <Title data-animate="fade-up"
                    >Experiencia Probada en Distintos Sectores</Title
                >
                <Paragraph
                    className="mt-8"
                    data-animate="fade"
                    data-animate-delay=".08s"
                >
                    Implementaciones exitosas en diversos sectores industriales,
                    adaptándonos a las necesidades específicas de cada cliente.
                </Paragraph>
            </div>

            <!-- Lista de sectores -->
            <ul
                class="mt-8 space-y-4 text-heading-3 font-medium"
                data-animate="fade-up"
                data-animate-delay=".12s"
            >
                <li class="flex items-center gap-3">
                    <span
                        class="flex-shrink-0 w-8 h-8 rounded-full bg-[#00B5E2]/10 dark:bg-[#2a5ecc]/10 text-[#005EB8] dark:text-[#71b5f5] flex items-center justify-center"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="2"
                            stroke="currentColor"
                            class="w-5 h-5"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M4.5 12.75l6 6 9-13.5"></path>
                        </svg>
                    </span>
                    Automotriz
                </li>
                <li class="flex items-center gap-3">
                    <span
                        class="flex-shrink-0 w-8 h-8 rounded-full bg-[#00B5E2]/10 dark:bg-[#2a5ecc]/10 text-[#005EB8] dark:text-[#71b5f5] flex items-center justify-center"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="2"
                            stroke="currentColor"
                            class="w-5 h-5"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M4.5 12.75l6 6 9-13.5"></path>
                        </svg>
                    </span>
                    Electrónica
                </li>
                <li class="flex items-center gap-3">
                    <span
                        class="flex-shrink-0 w-8 h-8 rounded-full bg-[#00B5E2]/10 dark:bg-[#2a5ecc]/10 text-[#005EB8] dark:text-[#71b5f5] flex items-center justify-center"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="2"
                            stroke="currentColor"
                            class="w-5 h-5"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M4.5 12.75l6 6 9-13.5"></path>
                        </svg>
                    </span>
                    Empaque y Logística
                </li>
                <li class="flex items-center gap-3">
                    <span
                        class="flex-shrink-0 w-8 h-8 rounded-full bg-[#00B5E2]/10 dark:bg-[#2a5ecc]/10 text-[#005EB8] dark:text-[#71b5f5] flex items-center justify-center"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="2"
                            stroke="currentColor"
                            class="w-5 h-5"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M4.5 12.75l6 6 9-13.5"></path>
                        </svg>
                    </span>
                    Metal-mecánica
                </li>
            </ul>

            <!-- Botón de acción -->
            <div class="pt-4" data-animate="fade-up" data-animate-delay=".16s">
                <a
                    href="#contact"
                    class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-[#005EB8] text-white hover:bg-[#004a92] transition-colors"
                >
                    <span>Contáctanos</span>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        class="w-4 h-4"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M8.25 4.5l7.5 7.5-7.5 7.5"></path>
                    </svg>
                </a>
            </div>
        </div>

        <!-- Columna de imagen con efectos visuales -->
        <div
            class="w-full lg:w-1/2 relative mt-16"
            data-animate="slide-right"
            data-animate-delay=".1s"
        >
            <div
                class="relative rounded-2xl overflow-hidden aspect-[4/3] shadow-xl"
            >
                <!-- Bordes con gradiente -->
                <div
                    class="absolute inset-0 rounded-2xl border-2 border-[#005EB8]/30"
                >
                </div>

                <!-- Imagen con overlay -->
                <div class="absolute inset-0">
                    <img
                        src="/images/sector_automotriz.webp"
                        alt="Sectores industriales"
                        class="w-full h-full object-cover"
                        width="596"
                        height="447"
                        loading="lazy"
                    />
                    <!-- Overlay para mejorar contraste -->
                    <div
                        class="absolute inset-0 bg-gradient-to-tr from-[#001489]/40 via-transparent to-transparent"
                    >
                    </div>
                </div>

                <!-- Elemento flotante decorativo -->
                <div
                    class="absolute top-4 right-4 rounded-lg flex items-center gap-2"
                    data-animate="scale"
                    data-animate-delay=".22s"
                >
                    <BadgeImage
                        title="Sectores clave"
                        subtitle="Automotriz, Electrónica y más"
                        svg="<svg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width='1.5' stroke='currentColor' class='w-5 h-5'><path stroke-linecap='round' stroke-linejoin='round' d='M11.35 3.836c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m8.9-4.414c.376.023.75.05 1.124.08 1.131.094 1.976 1.057 1.976 2.192V16.5A2.25 2.25 0 0118 18.75h-2.25m-7.5-10.5H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V18.75m-7.5-10.5h6.375c.621 0 1.125.504 1.125 1.125v9.375m-8.25-3l1.5 1.5 3-3.75'/></svg>"
                    />
                </div>
            </div>

            <!-- Elementos decorativos de fondo -->
            <div
                class="absolute -bottom-6 -left-6 w-32 h-32 bg-[#00B5E2]/20 rounded-full filter blur-2xl"
            >
            </div>
            <div
                class="absolute -top-6 -right-6 w-32 h-32 bg-[#001489]/10 rounded-full filter blur-2xl"
            >
            </div>
        </div>
    </Container>
</section>
