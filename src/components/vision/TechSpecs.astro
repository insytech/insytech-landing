---
import Container from "../shared/Container.astro";

const specs = [
    {
        category: "Cámara",
        items: [
            { label: "Resolución", value: "1MP - 20MP" },
            { label: "Interfaz", value: "GigE, USB3, IP" },
            { label: "Velocidad", value: "Hasta 120 fps" },
            { label: "Marcas", value: "Basler, FLIR, Cognex" }
        ]
    },
    {
        category: "Procesamiento",
        items: [
            { label: "Latencia", value: "<50ms" },
            { label: "Precisión", value: "99.7%" },
            { label: "GPU", value: "NVIDIA Jetson / RTX" },
            { label: "Throughput", value: "60 piezas/seg" }
        ]
    },
    {
        category: "Comunicación",
        items: [
            { label: "Protocolos", value: "OPC-UA, Modbus, MQTT" },
            { label: "PLC", value: "AB, Siemens, Omron" },
            { label: "I/O Digital", value: "24V TTL" },
            { label: "Red", value: "Ethernet 1Gbps" }
        ]
    },
    {
        category: "Ambiente",
        items: [
            { label: "Protección", value: "IP65 / IP67" },
            { label: "Temperatura", value: "-10°C a 50°C" },
            { label: "Alimentación", value: "24VDC Industrial" },
            { label: "Certificaciones", value: "CE, UL" }
        ]
    }
];
---

<section id="tech-specs" class="relative py-20 overflow-hidden bg-gray-50 dark:bg-gray-900">
    <!-- Patrón de fondo -->
    <div class="absolute inset-0 z-0">
        <div class="absolute w-full h-full bg-[radial-gradient(circle_at_1px_1px,rgba(0,94,184,0.05)_1px,transparent_0)] bg-[length:24px_24px] dark:opacity-50"></div>
    </div>

    <Container className="relative z-10">
        <!-- Encabezado -->
        <div class="max-w-3xl mx-auto text-center mb-12" data-animate="fade-up">
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-[#005EB8]/30 bg-[#005EB8]/5 dark:bg-[#005EB8]/10 mb-6">
                <div class="w-2 h-2 rounded-full bg-[#00B5E2] animate-pulse"></div>
                <span class="text-sm font-medium text-[#005EB8] dark:text-[#4da6ff] uppercase tracking-wider">
                    Especificaciones
                </span>
            </div>

            <h2 class="text-3xl sm:text-4xl lg:text-5xl font-semibold font-['FieldworkGeo'] text-[#211915] dark:text-white leading-tight mb-4">
                Especificaciones
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#001489] via-[#005EB8] to-[#00B5E2] dark:from-[#4da6ff] dark:via-[#00B5E2] dark:to-[#6de0ff]">
                    técnicas
                </span>
            </h2>

            <p class="text-gray-600 dark:text-gray-400 text-lg leading-relaxed">
                Hardware y software de grado industrial diseñado para los ambientes más exigentes.
            </p>
        </div>

        <!-- Grid de especificaciones -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6" data-animate="fade-up" data-animate-delay=".1s">
            {specs.map((section, index) => (
                <div class="bg-white dark:bg-gray-800/50 rounded-2xl border border-gray-200 dark:border-gray-700 overflow-hidden">
                    <!-- Header de categoría -->
                    <div class="px-6 py-4 bg-gradient-to-r from-[#001489] via-[#005EB8] to-[#00B5E2] dark:from-[#005EB8]/50 dark:via-[#00B5E2]/50 dark:to-[#00B5E2]/30">
                        <h3 class="text-lg font-semibold text-white">
                            {section.category}
                        </h3>
                    </div>
                    
                    <!-- Lista de specs -->
                    <div class="p-6">
                        <ul class="space-y-4">
                            {section.items.map((item) => (
                                <li class="flex justify-between items-start gap-2">
                                    <span class="text-sm text-gray-500 dark:text-gray-400">
                                        {item.label}
                                    </span>
                                    <span class="text-sm font-medium text-[#211915] dark:text-white text-right">
                                        {item.value}
                                    </span>
                                </li>
                            ))}
                        </ul>
                    </div>
                </div>
            ))}
        </div>

        <!-- Nota adicional -->
        <div class="mt-12 max-w-2xl mx-auto text-center" data-animate="fade-up" data-animate-delay=".2s">
            <div class="inline-flex items-center gap-2 px-4 py-3 rounded-xl bg-[#005EB8]/5 dark:bg-[#005EB8]/10 border border-[#005EB8]/20">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-[#005EB8] dark:text-[#4da6ff]">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" />
                </svg>
                <span class="text-sm text-gray-600 dark:text-gray-400">
                    Las especificaciones pueden variar según la configuración. <a href="#contact" class="text-[#005EB8] dark:text-[#4da6ff] hover:underline">Contáctanos</a> para una solución personalizada.
                </span>
            </div>
        </div>
    </Container>
</section>
